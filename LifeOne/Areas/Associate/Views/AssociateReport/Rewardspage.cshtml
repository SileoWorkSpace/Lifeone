@model LifeOne.Models.Modelreward
@{
    ViewBag.Title = "Rewardspage";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}
<style>
    .alert-warning {
        background-color: #fcf8e3 !important;
        border-color: #faebcc !important;
    }

    .tableincome {
    }

        .tableincome td:first-child {
            background: #fbfbfb;
            max-width: 40%;
        }

        .tableincome td {
            font-weight: bold;
        }
</style>
<div class="content">
    <div class="content-wrapper-before"></div>
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="ptitle">
                <h4 class="mb-1 mt-0 text-white">Rewards</h4>
                <nav aria-label="breadcrumb" class="float-left mt-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Associate-Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#">Loyalty Income</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Rewards</li>
                    </ol>
                </nav>
            </div>

        </div>

        @using (Html.BeginForm("Rewardspage", "AssociateReport", FormMethod.Post, new { @id = "form1" }))
        {
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table  table-striped " id="datatables">
                                    <thead>
                                        <tr>
                                            @*<th>S. No.</th>*@
                                            <th class="text-left">Pin</th>
                                            <th class="text-center">Target Matching Point<br />(2:1 or 1:2)</th>
                                            <th class="text-center">Achieve Matching Point <br />(2:1 or 1:2)</th>
                                            <th>Achieved On</th>
                                            <th class="text-left">Reward</th>
                                            @*<th>Status</th>*@

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.Rewardslst != null)
                                            {
                                                int SNO = 0;
                                                foreach (var item in Model.Rewardslst)
                                                {
                                                    <tr>

                                                        <td class="text-left">
                                                            <img src="@item.PinImage" width="32" /><span style="font-size:16px;font-weight:500"> @item.RewardName</span>
                                                            @if (item.Status == "Achieved")
                                                            {
                                                                <span class="badge bg-success">@item.Status</span>
                                                            }
                                                            else if (item.Status == "Pending")
                                                            {
                                                                <span class="badge bg-warning">@item.Status</span>
                                                            }
                                                            else if (item.Status == "Skipped")
                                                            {
                                                                <span class="badge bg-danger">@item.Status</span>
                                                            }
                                                            else if (item.Status == "Claimed")
                                                            {
                                                                <span class="badge bg-info">@item.Status</span>
                                                            }
                                                            else if (item.Status == "Claim Denied")
                                                            {
                                                                <span class="badge bg-danger">@item.Status</span>
                                                            }
                                                        </td>

                                                        <td class="text-center">@item.target_point</td>
                                                        <td class="text-center">@item.AchievePoint.ToString() </td>
                                                        <td>@item.AchievedOn</td>
                                                        <td class="text-left">
                                                            @if (item.RewardImg != "https://sgsquare.in/Content/Product/assets/images/rewards/rewards-default.jpg")
                                                            {
                                                                <img src="@item.RewardImg" class="img-thumbnail avatar rounded-circle" width="25" />
                                                            }
                                                            @if (item.RewardAmount.ToString() != "0.00")
                                                            {@item.RewardAmount.ToString()}
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         }
    </div>
</div>


