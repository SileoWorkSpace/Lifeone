@model LifeOne.Models.API.DAL.AssociateBusinessReport
@{
    ViewBag.Title = "BusinessSummary";

}

<style>
    .modal-footer {
        background: white;
        width: 100%;
    }

    .modal-header {
        display: block;
    }

    .modal-body {
        position: relative;
    }

    @@media (min-width: 992px) .modal-lg, .modal-xl {
        max-width: 1150px;
