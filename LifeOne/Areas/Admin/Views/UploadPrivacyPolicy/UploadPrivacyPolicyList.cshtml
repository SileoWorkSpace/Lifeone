@model LifeOne.Models.AdminManagement.AEntity.AdminPrivacyPolicy
@using LifeOne.Models.Manager;
@{
    ViewBag.Title = "UploadPrivacyPolicyList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}
<link href="~/Content/summernote/summernote/summernote-bs4.min.css" rel="stylesheet" />

@{
    string msg = (string)TempData["msg"];
    string code = Convert.ToString(TempData["code"]);
    if (msg != null)
    {
        if (code.Equals("1"))
        {
            <div class="alert alert-success m-t-30" id="divsuccess">
                <i class="mdi mdi-checkbox-multiple-marked-outline"></i> <strong>Success!</strong> @msg
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            </div>

        }
        else
        {
            <div class="alert alert-success m-t-30" id="divUpdate">
                <i class="mdi mdi-checkbox-multiple-marked-outline"></i>  <strong>Error!</strong> @msg
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            </div>

        }
    }

}
<div class="container-fluid">
    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Privacy Policy List</h4>
        </div>
        <div class="pbutton">
            <div class="right text-right">              
                    <a href="/UploadPrivacyPolicy" id="btnAdd" class="btn btn-success btn-sm">
                        <i class="fa fa-plus" aria-hidden="true"></i> Add New
                    </a>                
            </div>
        </div>
    </div>

    @using (Html.BeginForm("UploadPrivacyPolicyList", "UploadPrivacyPolicy", FormMethod.Post, new { enctype = "multypart/form-data" }))
    {

        <div class="col-lg-12">
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-9">
                            @*<h4 class="header-title mt-0 mb-1">Product List</h4>*@
                        </div>
                    </div>

                    <div class="table-responsive fixTableHead" id="DivProductList">
                        <table id="myTable" class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>#Sn.</th>
                                    <th>Privacy Policy</th>  
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {

                                    foreach (var item in Model.PrivacyPolicyList)
                                    {
                                        <tr>
                                            <td data-title="#Sn">@count</td>
                                            <td data-title="News Heading">@Html.Raw(item.PrivacyPolicy)</td>                                         
                                            <td data-title="Action">                                               
                                                    <a href="/UploadPrivacyPolicy?id=@item.Pk_Id"class="btn btn-primary btn-sm" style="display:@ViewBag.edit;">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                <a href="/Admin/UploadPrivacyPolicy/UploadPrivacyPolicyDelete?id=@item.Pk_Id" id="btnDelete" class="btn btn-danger btn-sm" onclick="return confirm('are you sure to delete this record?')" ToolTip="Delete" style="display:@ViewBag.delete;">
                                                        <i class="fa fa-trash"></i>
                                                    </a>                                                
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                }
                            </tbody>
                        </table>                       
                    </div><!-- /.box-body -->
                </div>
            </div><!-- /.box -->

        </div><!-- /.col -->
    }
</div>
<script src="~/Content/assests/js/jquery.min.js"></script>

