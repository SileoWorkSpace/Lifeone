@*@using PagedList;
@using PagedList.Mvc;*@
@model LifeOne.Models.AssociateManagement.AssociateEntity.EwalletRequest



@{
    ViewBag.Title = "E-Wallet Request Details";
    ViewBag.Controller = "EWalletRequest";
    ViewBag.HeaderTitle = "E-Wallet Request Details";
}
<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="ptitle">
                <h4 class="mb-1 mt-0">E-Wallet Request Details</h4>
                <nav aria-label="breadcrumb" class="float-left mt-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Wallet</a></li>
                        <li class="breadcrumb-item active" aria-current="page">E-Wallet Request Details</li>
                    </ol>
                </nav>
            </div>

            <div class="pbutton">
                <div class="right text-right">
                    <span>
                        <button type="button" class="btn btn-success btn-rounded btngreen"><i class="fa fa-file-excel-o"></i></button>
                    </span>
                    @*<span>
                        <button type="button" class="btn btn-success btn-rounded btnprint"><i class="fa fa-print"></i></button>
                    </span>*@ 
                    
                    <span>
                        <button type="button" class="btn btn-success btn-rounded btnPdf"><i class="fa fa-file-pdf-o"></i></button>
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9">
                                <h4 class="header-title mt-0 mb-1">My Income</h4>
                                <p class="sub-header">
                                    E-Wallet Request Details
                                </p>
                            </div><div class="col-md-3 navbar-custom pull-right" style="position:relative">
                                <div class="app-search">
                                    @*<form>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Search...">
                                            <span data-feather="search"></span>
                                        </div>
                                    </form>*@
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9"></div>
                            <div class="col-sm-3" style="text-align: right">
                                <a class="btn btn-info btn-sm" href="~/Associate/EWalletRequest/EWalletRequest">E-Wallet Request</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" id="alertBoxx">
                                @Html.Raw(ViewBag.Alert)
                            </div>
                        </div>
                        <div class="table-responsive" >
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>#Sn.</th>
                                        <th>Requested Date</th>
                                        <th>Amount</th>
                                        <th>Payment Mode</th>
                                        <th>Bank Name</th>
                                        <th>DD/Cheque No</th>
                                        <th>DD/ChequeDate</th>
                                        <th>Bank Branch</th>
                                        <th>Approval Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null )
                                    {
                                        if(Model.WalletRequestList!=null && Model.WalletRequestList.Count > 0) { 
                                        int i = 0;
                                        foreach (var item in Model.WalletRequestList)
                                        {
                                            i = i + 1;
                                            <tr data-toggle="tooltip" data-placement="top" class="from">
                                                <td data-title="#SN:">@i</td>
                                                <td>@Html.DisplayFor(m => item.RequestedDate)</td>
                                                <td>@Html.DisplayFor(m => item.Amount)</td>
                                                <td>@Html.DisplayFor(m => item.PaymentMode)</td>
                                                <td>@Html.DisplayFor(m => item.BankName)</td>
                                                <td>@Html.DisplayFor(m => item.DDChequeNo)</td>
                                                <td>@Html.DisplayFor(m => item.DDChequeDate)</td>
                                                <td>@Html.DisplayFor(m => item.BankBranch)</td>

                                                <td>



                                                    @if (item.AdminApprovedStatus == "Confirmed")
                                                    {
                                                        <span class="label label-success"> @Html.DisplayFor(m => item.AdminApprovedStatus)</span>
                                                    }
                                                    else if (item.AdminApprovedStatus == "Pending")
                                                    {
                                                        <span class="label label-warning"> @Html.DisplayFor(m => item.AdminApprovedStatus)</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-danger"> @Html.DisplayFor(m => item.AdminApprovedStatus)</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                            }

                                    }
                                </tbody>
                            </table>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- container-fluid -->

</div>


