                        $('#tblDataIncome').append(tr5);
                        tr6 = $('<tr/>');
                        tr6.append("<td>Royalty Income</td>");
                        tr6.append("<td>" + data.Objlist[i].SmartRoyaltyIncome + "</td>");
                        $('#tblDataIncome').append(tr6);
                        tr7 = $('<tr/>');
