                                            <td align="left">@count</td>
                                            <td align="left"><span>@item.PersonName</span></td>
                                            <td align="left"><span>@item.Contact</span></td>
                                            <td align="left"><span>@item.EmailAddress</span></td>
                                            <td align="left"><span>@item.DisplayDOB</span></td>
