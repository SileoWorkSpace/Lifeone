@using LifeOne.Models.Manager;
@{
    ViewBag.Title = "BonanzaMasterList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Bonanza Master</h4>
            @*<nav aria-label="breadcrumb" class="float-left">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin-Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#-">Masters</a></li>
                        <li class="breadcrumb-item"><a href="#-">Bonanza Details</a></li>
                    </ol>
                </nav>*@
        </div>
        @if (PermissionManager.IsActionPermit("Bonanza Master", ViewOptions.FormView))
        {
             <div class="pbutton right text-right">
                <a href="/Admin-NewBonanza" class="btn btn-success btn-sm"> <i class="fa fa-plus" aria-hidden="true"></i> Add New</a>
            </div>

        }
    </div>
    @{
        @*if(TempData["Code"] !=null)
            {
                string Code = (string)@TempData["Code"];
                string Remark = (string)@TempData["Remark"];

                if(Code=="1")
                {
                    <span class="label label-success">@Remark</span>

                }*@


    }

    <div id="no-more-tables">
        <div class="row">

            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">


                        <div class="table-responsive">
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>#Sn.</th>
                                        <th>Bonanza Name</th>
                                        <th>Bonanza Image</th>
                                        <th>From Date</th>
                                        <th>To Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        int i = 0;
                                        foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@(i = i + 1)</td>
                                                <td>@item.BonanzaName</td>
                                                <td><img src="@item.Image" height="50px" width="50px" /></td>
                                                <td>@item.FromDate</td>
                                                <td>@item.ToDate</td>
                                                <td>
                                                    @if (@item.Status == "Active")
                                                    {
                                                        <span class="badge badge-success">@item.Status</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning">@item.Status</span>

                                                    }

                                                </td>
                                                <td>
                                                    @if (PermissionManager.IsActionPermit("Bonanza Master", ViewOptions.FormUpdate))
                                                    {

                                                        <a href="/Admin/Master/UpdateBonanzamaster?Id=@item.Pk_BonanzaId" class="btn btn-success btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>

                                                    }
                                                    @if (PermissionManager.IsActionPermit("Bonanza Master", ViewOptions.FormDelete))
                                                    {

                                                        <a href="/Admin/Master/DeleteBonanzaMaster?Id=@item.Pk_BonanzaId" class="btn btn-danger btn-sm" onclick="return confirm('are you sure to delete this record')"><i class="fa fa-trash"></i></a>

                                                    }
                                                </td>
                                            </tr>

                                        }


                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
    </div>


</div>