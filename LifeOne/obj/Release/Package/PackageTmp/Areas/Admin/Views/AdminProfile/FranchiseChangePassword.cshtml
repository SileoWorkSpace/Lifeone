@model LifeOne.Models.AdminManagement.AEntity.MAdminProfile

@{
    ViewBag.Title = "Franchise Change Password";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string msg = (string)TempData["msg"];
    string code = Convert.ToString(TempData["code"]);
    if (msg != null)
    {
        if (code.Equals("1"))
        {
            <div class="alert alert-success m-t-30" id="divsuccess">
                <i class="mdi mdi-checkbox-multiple-marked-outline"></i> <strong>Success!</strong> @msg
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            </div>

        }
        else
        {
            <div class="alert alert-success m-t-30" id="divUpdate">
                <i class="mdi mdi-checkbox-multiple-marked-outline"></i>  <strong>Error!</strong> @msg
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            </div>

        }
    }

}
@using (Html.BeginForm("FranchiseChangePassword", "AdminProfile", FormMethod.Post))
{
    <div class="container-fluid">


        <div class="row page-titles">
            <div class="ptitle">
                <h4 class="mb-1 mt-0">Change Password</h4>
                <nav aria-label="breadcrumb" class="float-left">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin-Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#-">Franchisee Profile</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                    </ol>
                </nav>
            </div>
            <div class="pbutton">

            </div>
        </div>
        <div id="no-more-tables">
            <div class="row">


                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="box">
                        <div class="box-body">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-3"></div>
                                    <div class="col-md-6 mt-10">
                                        <form action="#" name="registration">
                                            <div class="row">

                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>New Password<span class="text-danger">*</span></label>
                                                        @*<input type="password" name="NewPassword" class="input-text form-control" id="NewPassword" ng-model="NewPassword" required="required" autocomplete="new-password">*@
                                                        @Html.TextBoxFor(m => m.NewPassword, new { @class = "input-text form-control", @placeholder = "Enter New Password Here", @id = "NewPassword", autocomplete = "off", @onmouseover = "NewmouseoverPass();", @onmouseout = "NewmouseoutPass();", @type = "password", @maxlength = "15" })
                                                        @Html.ValidationMessageFor(m => m.NewPassword)
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Confirm Password<span class="text-danger">*</span></label>
                                                        <input type="password" name="ConfirmPassword" class="input-text form-control" placeholder="Enter Confirm Password Here " id="Confirm_Password" ng-blur="ValidatePsswd()" ng-model="ConfirmPassword" required="required" autocomplete="new-password">
                                                    </div>
                                                </div>
                                            </div>
                                            @Html.HiddenFor(m=>m.Fk_Memid)
                                            <input type="hidden" id="Fk_Memid" name="Fk_Memid" value="@ViewBag.FkMemId" />

                                            @*<button class="btn btn-success" type="button" style="display:block !important;" ng-click="ChangePassword()"> Submit</button>*@
                                            <input type="Submit" value="Update" name="Update" class="btn btn-success" id="BtnChangePassword" style="display:none">
                                            <input type="button" value="Update" name="Update" class="btn btn-success" style="display:block !important;" onclick="return Validation();">
                                        </form>
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>

            </div>
        </div>
    </div>
}

<script>

    function Validation() {
        debugger;


        if ($('#OldPassword').val() == "") {
            alert('Please Enter Old Password');
            $('#OldPassword').focus()
            return false;
        }
        if ($('#NewPassword').val() == "") {
            alert('Please Enter New Password');
            $('#NewPassword').focus()
            return false;
        }
        var NewPassword = $('#NewPassword').val().length;
        if (NewPassword < 6) {
            alert('Please Enter New Password Minimum  6 Character OR Maximum 15 Character');
            $('#NewPassword').focus()
            return false;
        }
        if (NewPassword > 15) {
            alert('Please Enter New Password Minimum  6 Character OR Maximum 15 Character');
            $('#NewPassword').focus()
            return false;
        }


        if ($('#Confirm_Password').val() == "") {
            alert('Please Enter  Confirm Password');
            $('#Confirm_Password').focus()
            return false;
        }

        if ($('#NewPassword').val() != $('#Confirm_Password').val()) {
            alert('Confirm Password do not match with new password');
            $('#Confirm_Password').focus()
            return false;
        }
        $("#BtnChangePassword").trigger('click');
    }
    function NewmouseoverPass(obj) {
        var obj = document.getElementById('NewPassword');
        obj.type = "text";
    }
    function NewmouseoutPass(obj) {
        var obj = document.getElementById('NewPassword');
        obj.type = "password";
    }

</script>

