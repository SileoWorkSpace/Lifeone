<script language="JavaScript">
		/************Associate Chart***************/
		google.charts.load('current', {packages: ['corechart']});

		function associateChart() {
            // Define the chart to be drawn.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Associate');
            data.addColumn('number', 'Percentage');
            data.addRows([
               ['Active', 150],
               ['InActive', 50],
               ['Blocked', 10]
            ]);

            // Set chart options
            var options = {
               'width':700,
               'height':400
            };

            // Instantiate and draw the chart.
            var chart = new google.visualization.PieChart(document.getElementById('AssociateChart'));
            chart.draw(data, options);
         }
         google.charts.setOnLoadCallback(associateChart);

		 /************Packages Chart***************/
		google.charts.load('current', {packages: ['corechart']});

         function packageChart() {
            // Define the chart to be drawn.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Orders');
            data.addColumn('number', 'Percentage');
            data.addRows([
               ['Total', 50],
               ['Package-12000', 15],
               ['Package-6000', 5],
               ['Package-3000', 30]
            ]);

            // Set chart options
            var options = {
               'width':700,
               'height':400,
               pieHole: 0.4
            };

            // Instantiate and draw the chart.
            var chart = new google.visualization.PieChart(document.getElementById('PackageChart'));
            chart.draw(data, options);
         }
         google.charts.setOnLoadCallback(packageChart);


		 /************Bonus Chart***************/
		 google.charts.load('current', {packages: ['corechart']});
		 function drawChart() {
            // Define the chart to be drawn.
            var data = google.visualization.arrayToDataTable([
               ['Amount', 'All'],
               ['Matching Bonus Fresh',  100],
               ['Matching Bonus Repurchase',  200],
               ['Level Bonus',  400]
            ]);

            var options = {title: ''};

            // Instantiate and draw the chart.
            var chart = new google.visualization.ColumnChart(document.getElementById('BonusChart'));
            chart.draw(data, options);
         }
         google.charts.setOnLoadCallback(drawChart);


		/************Repurchase Order Chart***************/
		google.charts.load('current', {packages: ['corechart']});

         function repurchase() {
            // Define the chart to be drawn.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Orders');
            data.addColumn('number', 'Percentage');
            data.addRows([
               ['Active Order', 20],
               ['Pending Order', 10],
               ['Cancelled Order', 5],
               ['Dispatched Order', 12],
               ['Delivered Order', 10]
            ]);

            // Set chart options
            var options = {
               'width':700,
               'height':400,
               pieHole: 0.4
            };

            // Instantiate and draw the chart.
            var chart = new google.visualization.PieChart(document.getElementById('RepurchaseOrder'));
            chart.draw(data, options);
         }
         google.charts.setOnLoadCallback(repurchase);
</script>