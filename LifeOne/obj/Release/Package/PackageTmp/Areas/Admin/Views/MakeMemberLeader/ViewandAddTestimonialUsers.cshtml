<span id="fk_memIDText" style="display:none"></span>
<script>
    //getbyid
    function getbyID() {
        var ID = $('#txtid').val();
        if (ID == "") {
            alert("Please Enter LoginId");
            $('#txtid').focus();
            return false;
        }
        $.ajax({
            url: "/Admin/MakeMemberLeader/getbyid?id=" + ID,
            typr: "GET",
            contentType: "application/json;charset=UTF-8",
            dataType: "json",
            success: function (result) {
                if (result[0].Status == 1) {
                    $('#fk_memIDText').text(result[0].Fk_MemId);
                    $('#txtfname').val(result[0].FirstName);
                    $('#txtlname').val(result[0].LastName);
                    $('#txtemail').val(result[0].Email);
                    $('#txtmobile').val(result[0].Phone);
                }
                else {
                    alert("Invalid Id.");
                    $('#txtid').val('');
                    $('#txtfname').val('');
                    $('#txtlname').val('');
                    $('#txtemail').val('');
                    $('#txtmobile').val('');
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
    function addrecord() {
        var ID = $('#fk_memIDText').text();
        if (ID == "") {
            alert("Please Enter LoginId");
            $('#txtid').focus();
            return false;
        }
        var empObj = {
            Fk_MemId: $('#fk_memIDText').text()
        };

        $.ajax({
            url: "/Admin/MakeMemberLeader/addTetsimonialMembers",
            data: JSON.stringify({ sh: empObj }),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {

                if (result < 0) {
                    alert("This member is already allowed for testimonial!");
                    return false;
                }
                alert("Details Saved Successfully");
                window.location.reload();
            }
            //,
            //error: function (errormessage) {
            //    alert("invalid loginid");
            //}
        });
    }
    function Delele(id) {
        var ans = confirm("Are you sure you want to delete this Record?");
        if (ans) {
            $.ajax({
                url: "/Admin/MakeMemberLeader/deletetetsimonial/" + id,
                type: "POST",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    alert("Deleted Successfully!");
                    window.location.reload();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
    }
</script>