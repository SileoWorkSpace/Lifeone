@model LifeOne.Models.AdminManagement.AEntity.MAdminMembers

@{
    ViewBag.Title = "TopTenTodaysReferals";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("TopTenTodaysReferals", "AdminReport", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <section class="content-header">
        <div class="col-md-4">
            <h1><small> Todays Top Ten Referrals</small> </h1>
            <ol class="breadcrumb" style="clear:both;background:none; padding:0px;">
                <li><a href="#-">Home</a></li>
                <li><a href="#-">Admin</a></li>
                <li class="active"> Todays Top Ten Referrals</li>
            </ol>
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <div class="pbutton">
                <div class="right text-right">
                    <span>
                        <!--<button type="button" class="btn btn-success btn-rounded btngreen"><i class="fa fa-file-excel-o"></i></button>-->
                    </span>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div id="no-more-tables">
            <form id="form1" method="post">

                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-body">
                                <table id="myTable" class="table small table-hover">
                                    <thead>
                                        <tr>
                                            <th>#Sn.</th>
                                            <th>Login</th>
                                            <th>Invited Code</th>
                                            <th>Name</th>
                                            <th>Mobile</th>
                                            <th>Total Number of Referrals</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Objlist.Count > 0)
                                        {
                                            int SNo = 0;
                                            foreach (var item in Model.Objlist)
                                            {

                                                <tr>
                                                    <td data-title="#SN:">@(SNo = SNo + 1)</td>

                                                    <td data-title="Name:">@item.LoginId</td>
                                                    <td data-title="Mobile:">@item.InviteCode</td>
                                                    <td data-title="Email:">@item.MemberName</td>
                                                    <td data-title="Email:">@item.Mobile</td>
                                                    <td data-title="Email:">@item.TotalReferal </td>



                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>

                            </div>
                            <footer class="panel-footer">
                                <div class="row">


                                    @if (Model != null)
                                    {
                                        if (Model.Pager != null)
                                        {
                                            if (Model.Pager.EndPage > 1)
                                            {
                                                <div class="col-sm-6 text-left"> <small class="text-muted inline">showing @Model.Objlist[0].ToatlRecord of @Model.Objlist.Count items</small> </div>
                                                <div class="col-sm-6 text-right text-center-xs">
                                                    <ul class="pagination pagination-sm m-t-none m-b-none">
                                                        @if (Model.Pager.CurrentPage > 1)
                                                        {
                                                            <li>
                                                                <a href="/Admin/AdminReport/BlockUnblockDetails?Searchby=@Model.Searchby&SearchParam=@Model.SearchParam">First</a>
                                                            </li>
                                                            <li>
                                                                <a href="/Admin/AdminReport/BlockUnblockDetails?page=@(Model.Pager.CurrentPage - 1)&Searchby=@Model.Searchby&SearchParam=@Model.SearchParam">Previous</a>
                                                            </li>
                                                        }
                                                        @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                                        {
                                                            <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                                                                <a href="/Admin/AdminReport/BlockUnblockDetails?page=@page&Searchby=@Model.Searchby&SearchParam=@Model.SearchParam">@page</a>
                                                            </li>
                                                        }
                                                        @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                                        {
                                                            <li>
                                                                <a href="/Admin/AdminReport/BlockUnblockDetails?page=@(Model.Pager.CurrentPage + 1)&Searchby=@Model.Searchby&SearchParam=@Model.SearchParam">Next</a>
                                                            </li>
                                                            <li>
                                                                <a href="/Admin/AdminReport/BlockUnblockDetails?page=@(Model.Pager.TotalPages)&Searchby=@Model.Searchby&SearchParam=@Model.SearchParam">Last</a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            }
                                        }

                                    }

                                </div>
                            </footer>

                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->

                    </div>
                    <!-- /.col -->
                </div>

            </form>
        </div>
    </section>

}


