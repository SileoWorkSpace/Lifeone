@model LifeOne.Models.API.MVendorViewModel
@{
    ViewBag.Title = "BindVendorsInfromation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int SNO = 0;
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Vendor Details</h4>
            <nav aria-label="breadcrumb" class="float-left">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#-">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="#-">Master</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Vendor Details</li>
                </ol>
            </nav>
        </div>
    </div>
    <div id="no-more-tables">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <div class="table-responsive" >
                            <table class="table table-hover mb-0" id="tblMemberList">
                                <thead>
                                    <tr>
                                        <th>#Sn.</th>
                                        <th>seller_id</th>
                                        <th>shop_title</th>
                                        <th>contact_number</th>
                                        <th>shop_logo</th>
                                        <th>pincode on</th>
                                        <th>city</th>
                                        <th>state on</th>
                                        <th>line1</th>
                                    </tr>
                                </thead>
                                <tbody id="bindVendorInfomation">

                                    @if (Model != null && Model.data.Count > 0)
                                    {
                                        foreach (var item in Model.data)
                                        {
                                            SNO = SNO + 1;
                                            <tr>
                                                <td>@SNO</td>
                                                <td>@item.seller_id</td>
                                                <td>@item.shop_title</td>
                                                <td>@item.contact_number</td>
                                                <td>@item.shop_logo</td>
                                                <td>@item.pincode</td>
                                                <td> @item.city</td>
                                                <td>@item.state</td>
                                                <td> @item.country</td>
                                                <td>@item.line1</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </div>
</div>

