    <div id="no-more-tables">
        <div class="row">

            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">


                        <div class="table-responsive" >
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>#Sn.</th>
                                        <th>Bonanza Name</th>
                                        <th>Bonanza Detail</th>
                                        <th>Bonanza Image</th>
                                        <th>Business Amount</th>
                                        <th>Bonanza Target</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        int i = 0;
                                        foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@(i = i + 1)</td>
                                                <td>@item.BonanzaName</td>
                                                <td>@item.BonanzaDetailName</td>
                                                <td><img src="@item.BonanzaDetailImage" height="50px" width="50px" /></td>
                                                <td>
                                                    @if (@item.BusinessAmount == 0)
                                                    {
                                                       <span>-</span>
                                                   }
                                                    else
                                                    {
                                                        @item.BusinessAmount
                                                    }
                                                </td>
                                                <td>@item.BonanzaTarget</td>
                                                <td>
                                                    <a href="/Admin/Master/UpdateBonanzaDetail?Id=@item.Pk_BonanzaDetailId" class="btn btn-success btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                    <a href="/Admin/Master/DeleteBonanzaDetail?Id=@item.Pk_BonanzaDetailId" class="btn btn-danger btn-sm" onclick="return confirm('are you sure to delete this record')"><i class="fa fa-trash"></i></a>


                                                </td>
                                            </tr>

                                        }


                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
