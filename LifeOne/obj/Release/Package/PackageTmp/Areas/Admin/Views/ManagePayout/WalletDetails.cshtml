@model LifeOne.Models.AssociateManagement.AssociateEntity.CashbackWallet
@using LifeOne.Models.Manager
@{
    ViewBag.Title = "Wallet Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Wallet Detail Ledger</h4>
            <nav aria-label="breadcrumb" class="float-left mt-1">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Transactions</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Wallet Detail Ledger</li>
                </ol>
            </nav>
        </div>
        <div class="pbutton">
            <div class="right text-right">
                <span>
                    @*<a class="advance-search" title="Click here for search" data-toggle="tooltip" data-placement="bottom" href="#-">Search</a>*@
                </span>
                <span>
                    <a href="@Url.Action("ExportToExcelWalletLedger","ManagePayout",new {Page=Model!=null && Model.Pager!=null&&Model.Pager.EndPage>0?Model.Pager.CurrentPage:1 })" class="btn btn-success btn-rounded btngreen"><i class="fa fa-file-excel-o"></i></a>
                </span>
                <span>
                    <button class="btn btn-success btn-rounded btnPdf" id="btnpdf" title="PDF"><i class="fa fa-file-pdf-o"></i></button>
                </span>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <form action="" method="post">
                        <div class="row" id="advance-search" style="display:none;">
                            <div class="col-md-12">
                                <div class="alert alert-warning" style="color:#727272 !important">
                                    <div class="row">
                                        <div class="col-12 col-md-2">
                                            <div class="form-group">
                                                <label>Login ID</label>
                                                <input type="text" name="LoginID" id="LoginID" placeholder="" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-2">
                                            <div class="form-group">
                                                <label>From Date</label>
                                                <input type="date" name="FromDate" id="FromDate" placeholder="" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-2">
                                            <div class="form-group">
                                                <label>To Date</label>
                                                <input type="date" name="ToDate" id="ToDate" placeholder="" class="form-control ">
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-2">
                                            <div class="form-group">
                                                <label style="display:block;"></label>
                                                <input type="submit" class="btn btn-success " style="margin-top:1.5em;" value="Search" id="BtnSearch">
                                                <a href="/WalletDetails" class="btn btn-secondary" style="margin-top:1.5em;">Reset</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                    <div class="table-responsive" >
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th><b>#Sn.</b></th>
                                    <th><b>Login Id</b></th>
                                    <th><b>Transaction Date</b></th>
                                    <th><b>Narration</b></th>
                                    <th><b>CrAmount</b></th>
                                    <th><b>DrAmount</b></th>
                                    <th><b>Balance</b></th>
                                    @*<th><b>Payout No</b></th>*@
                                    @*<th><b>LoginId</b></th>
                                        <th><b>Name</b></th>*@
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null && Model.CashbackWallets != null)
                                {
                                    int SNo = 0;
                                    foreach (var item in Model.CashbackWallets)
                                    {

                                        <tr>
                                            <td data-title="#SN:">@(SNo = SNo + 1)</td>
                                            <td data-title="Login:">@item.LoginId (@item.Name)</td>
                                            <td data-title="Login:">@item.TransactionDate</td>
                                            <td data-title="Name:">@item.Narration</td>
                                            <td data-title="Mobile:">@item.CrAmount</td>
                                            <td data-title="Email:">@item.DrAmount</td>
                                            <td data-title="Email:">@item.Balance</td>
                                            @*<td data-title="Email:">@item.LoginId</td>
                                                <td data-title="Email:">@item.Name</td>*@
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

