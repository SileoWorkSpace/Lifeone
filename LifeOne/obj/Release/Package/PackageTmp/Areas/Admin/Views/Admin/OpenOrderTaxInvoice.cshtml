@model LifeOne.Models.AdminManagement.AEntity.OrderConfirmationModel

@{
    Layout = null;
}
<!DOCTYPE html>
<!-- saved from url=(0100)http://lucknowayurveda.com/EWalletRequest/ShippingBillingPrintInvoice?FK_MemId=67&Pk_InvestmentID=11 -->
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>Print Invoice </title>
    <link href="~/Print Invoice_files/responsive.css" rel="stylesheet">
    <link href="~/Print Invoice_files/newInvoiceCss.css" rel="stylesheet">
    <link href="~/Print Invoice_files/font-awesome.css" rel="stylesheet">


    <style>


        .content {
            height: 10in;
        }
    </style>
</head>
<body>

    @{
        decimal TotalQty = 0, TotalPV = 0, TotalRate = 0, TotalCGST = 0, TotalSGST = 0, TotalIGST = 0, TotalTaxable = 0, TotalSubTotal = 0, TotalSGSTPer = 0, TotalCGSTPerc = 0, TotalIGSTPerc = 0;
        int SNo = 0;
    }

    <div>
        <div class="content">





            <div id="divcontent">
                <div class="row-fluid">

                    <div class="span12">
                        <table class="table" style="border-top: 0px;width:100%;" cellspacing="0" cellpadding="0">
                            <tbody>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <strong><strong style="font-size: small;margin-left:102px;">Tax Invoice</strong></strong>
                                    </td>
                                    <td>
                                        <span id="lblBilledBy" style="float: right;">Invoiced By: @Model.CompanyName</span>
                                    </td>
                                </tr>
                                <tr style="border-top: 0px;">
                                    <td style="padding: 10px 0px 10px 10px; width: 25% !important; border-top: 0px;">
                                        <img src="@Model.CompanyLogo" alt="Company Logo" style="width: 110px;">
                                    </td>
                                    <td style="text-align: center; padding-right: 10px; border-top: 0px;font-size:12px">

                                        <strong>
                                            Corporate Office: @Model.OfficeAddress
                                        </strong><br>
                                        <strong>Contact: @Model.OfficeContactNo</strong>&nbsp;|&nbsp;<strong>E-mail: @Model.OfficeEmailId</strong>&nbsp;|&nbsp;
                                        <strong>Website: @Model.Website</strong><br>

                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row-fluid" style="display:flex">
                    <div class="span12" style="padding:0;flex:1;">
                        <table class="table" style="width: 100% !important; float: left;" cellspacing="0" cellpadding="0">
                            <tbody>
                                <tr>
                                    <th style="border-top: none;width:130px">GST Number</th>
                                    <td style="border-top: none; font-weight: 800;">:&nbsp;<label id="lblGSTCopy"></label>@Model.GSTIN</td>
                                </tr>
                                <tr>
                                    <th style="width:130px">Invoice Serial Number</th>
                                    <td>:&nbsp;<span id="lblInvoiceNo">@Model.OrderNo</span></td>

                                </tr>
                                <tr>
                                    <th style="width:130px">Invoice Date</th>
                                    <td>
                                        :&nbsp;<span id="lblInvDate">@Model.InvoiceDate</span>
                                    </td>
                                </tr>


                            </tbody>
                        </table>
                        <table class="table" style="width: 100%;" cellspacing="0" cellpadding="0">
                            <tbody>
                                <tr>
                                    <th style="border-top: none;width:130px">Copy</th>
                                    <td style="border-top: none;">:&nbsp;<span id="lblDocNo" style="display: none;">NA</span><span contenteditable="">Original</span></td>
                                </tr>
                                <tr>
                                    <th style="width:130px">Transport Mode</thstyle="width:130px">
                                    <td>:&nbsp;<span id="lblTransportMode">NA</span></td>
                                </tr>
                                <tr>
                                    <th style="width:130px">Vehicle Number</th>
                                    <td>:&nbsp;<span id="lblVehicalNumber">NA</span></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row-fluid" style="display:flex">
                    <div class="span12" style="padding:0;flex:1;border-right: 1px solid #000;">
                        <table class="table" style="width: 100% !important; float: left; border-right: 1px solid;" cellspacing="0" cellpadding="0">

                            <tbody>
                                <tr>
                                    <th colspan="2" style="border-top: none;  background: #f1f1f1;text-align: left;">
                                        Billing Address
                                        <span class="pull-right">OrderNo: <span style="font-size: 10px;">@Model.OrderNo</span></span>
                                    </th>
                                </tr>
                                <tr></tr>
                                <tr>
                                    <th style="border-top: 1px solid;">Name</th>
                                    <td style="border-top: 1px solid;">:&nbsp;<span id="rptBillTo_lblCustomerName_0">@Model.BName </span></td>
                                </tr>

                                <tr>
                                    <th>Address</th>
                                    <td>:&nbsp;<span id="rptBillTo_lblAddress_0">@Model.BAddress</span></td>

                                </tr>
                                @if (!string.IsNullOrEmpty(Model.BGSTNo))
                                {
                                    <tr>
                                        <th>GSTNo.</th>
                                        <td>:&nbsp;<span id="rptBillTo_lblAddress_0">@Model.BGSTNo</span></td>

                                    </tr>
                                }

                                <tr></tr>



                            </tbody>
                        </table>
                    </div>
                    <div class="span12" style="padding:0;flex:1;margin:0">
                        <table class="table wt-mn" style="width: 100% !important;" cellspacing="0" cellpadding="0">
                            <tbody>
                                <tr>
                                    <th style="border-top: none;  background: #f1f1f1;text-align: left;" colspan="2">
                                        Shipping Address

                                    </th>
                                </tr>
                                <tr></tr>
                                <tr>
                                    <th style="border-top: 1px solid;">Name</th>
                                    <td style="border-top: 1px solid;">:&nbsp;<span id="rptShipTo_lblCustomerName2_0"> @Model.BName</span></td>

                                </tr>

                                <tr>
                                    <th>Address</th>

                                    <td>:&nbsp;<span id="rptShipTo_lblAddress2_0">@Model.BAddress</span></td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.BGSTNo))
                                {
                                    <tr>
                                        <th>GSTNo.</th>
                                        <td>:&nbsp;<span id="rptBillTo_lblAddress_0">@Model.BGSTNo</span></td>

                                    </tr>
                                }

                                <tr></tr>



                            </tbody>
                        </table>

                    </div>
                </div>

                <div class="row-fluid">

                    <div class="span12" style="">
                        <table class="table inventory" style="border-bottom: 1px solid ;" cellspacing="0" cellpadding="0">
                            <thead>
                                <tr style="  background: #f1f1f1;border-right: 1px solid #000;border-bottom: 1px solid #000;	">
                                    <th style="border-top: none; padding: 0px;border-bottom: 1px solid #000"><span>#.</span></th>
                                    <th style="border-top: none; padding: 0px;border-bottom: 1px solid #000;text-align:left"><span>Product Name</span></th>
                                    <th style="border-top: none; padding: 0px;border-bottom: 1px solid #000"><span>HSN/<br />SAC Code</span></th>

                                    <th style="border-top: none; padding: 0px;border-bottom: 1px solid #000"><span>Qty.</span></th>

                                    <th style="border-top: none; padding: 0px;border-bottom: 1px solid #000"><span>Rate(₹)</span></th>
                                    @*<th style="border-top: none; padding: 0px;border-bottom: 1px solid #000">
                                        <span>BV</span><br>
                                    </th>*@
                                    <th style="border-top: none; padding: 0px;border-bottom: 1px solid #000; border-right:0px;">
                                        <table style="width: 100%;" cellspacing="0" cellpadding="0">
                                            <tbody>
                                                <tr>

                                                    <th colspan="2" style="border-bottom:1px solid #000;"><span>SGST</span></th>
                                                    <th colspan="2" style="border-bottom:1px solid #000;"><span>CGST</span></th>
                                                    <th colspan="2" style="border-bottom:1px solid #000;"><span>IGST</span></th>
                                                </tr>
                                                <tr>

                                                    <th style="data-rel=" tooltips" title="Rate(%)"><small style="font-size:8px;">(%)</small></th>
                                                    <th><small style="font-size:8px;">Amt</small></th>
                                                    <th style="data-rel=" tooltips" title="Rate(%)"><small style="font-size:8px;">(%)</small></th>
                                                    <th><small style="font-size:8px;">Amt</small></th>
                                                    <th style="data-rel=" tooltips" title="Rate(%)"><small style="font-size:8px;">(%)</small></th>
                                                    <th><small style="font-size:8px;">Amt</small></th>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </th>
                                    <th style="border-top: none; padding: 0px;border-bottom: 1px solid #000"><small>Taxable <br> Amount(₹)</small></th>

                                    <th style="border-top: none; padding: 0px;border-bottom: 1px solid #000; border-right: none;"><span>SubTotal(₹)</span></th>
                                </tr>
                            </thead>

                            <tbody style="min-height:400px">

                                @foreach (var item in Model.OrderItems)
                                {

                                    SNo = SNo + 1;
                                    TotalQty = TotalQty + Convert.ToDecimal(item.ProductQty);
                                    TotalRate = TotalRate + Convert.ToDecimal(item.ProductAmt);
                                    TotalSGST = TotalSGST + Convert.ToDecimal(item.SGSTAmount);
                                    TotalCGST = TotalCGST + Convert.ToDecimal(item.CGSTAmount);
                                    TotalIGST = TotalIGST + Convert.ToDecimal(item.IGSTAmount);
                                    TotalSGSTPer = TotalSGSTPer + Convert.ToDecimal(item.SGST);
                                    TotalIGSTPerc = TotalIGSTPerc + Convert.ToDecimal(item.IGST);
                                    TotalCGSTPerc = TotalCGSTPerc + Convert.ToDecimal(item.CGST);
                                    TotalTaxable = TotalTaxable + item.TexableAmount;
                                    TotalSubTotal = TotalSubTotal + item.SubTotal;
                                    TotalPV = TotalPV + item.PointValue;

                                    <tr>
                                        <td><span>@SNo</span></td>
                                        <td style="text-align: left;"><span class="product-name"> @item.ProductName</span></td>
                                        <td style="text-align: left;"><span class="product-name"> @item.HSNNo</span></td>

                                        <td style="text-align: center;"><span class="salqty"> @item.ProductQty</span></td>

                                        <td style="text-align: center;"><span class="prorate">@item.ProductAmt</span></td>

                                        @*<td style="text-align: center;">
                                            <span class="bvline">
                                                @item.PointValue
                                            </span>
                                        </td>*@

                                        <td style="padding: 0px; border-right:0px;">
                                            <table style="width: 100%;" cellspacing="0" cellpadding="0" border="0">
                                                <tbody>
                                                    @*<tr>
                                                            <td style="width:15%; padding:2px;text-align:right;font-size:10px;"> @item.SGST</td>
                                                            <td class=" " style="width:24.3%; padding:2px;text-align:right;"><small style="font-size:10px;">@item.SGSTAmount</small></td>
                                                            <td style="width:15%;padding:2px ;text-align:right;"><small style="font-size:10px;">@item.CGST</small></td>
                                                            <td style="width:24.3%;padding:2px; text-align:right;"><small style="font-size:10px;">@item.CGSTAmount</small></td>
                                                            <td style="width:15%; padding:2px;text-align:right;"><small style="font-size:10px;">@item.IGST</small></td>
                                                            <td class=" " style="width:24.3%; padding:2px;text-align:right;"><small style="font-size:10px;">@item.IGSTAmount</small></td>
                                                        </tr>*@
                                                    <tr>

                                                        <th style="data-rel=" tooltips" title="Rate(%)"><small style="font-size:8px;">@item.SGST</small></th>
                                                        <th><small style="font-size:8px;">@item.SGSTAmount</small></th>
                                                        <th style="data-rel=" tooltips" title="Rate(%)"><small style="font-size:8px;">@item.CGST</small></th>
                                                        <th><small style="font-size:8px;">@item.CGSTAmount</small></th>
                                                        <th style="data-rel=" tooltips" title="Rate(%)"><small style="font-size:8px;">@item.IGST</small></th>
                                                        <th><small style="font-size:8px;">@item.IGSTAmount</small></th>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                        <td style="text-align: center;"><span class="tax-amount"> @item.TexableAmount</span></td>
                                        <td style="text-align: center; border-right: none;"><span><span class="prototal"> @item.SubTotal</span></span></td>

                                    </tr>
                                }

                            </tbody>



                        </table>

                    </div>
                </div>
                <br />
                <div class="row-fluid">

                    <div class="span8" style="">
                        <table class="table inventory" style="border-bottom: 1px solid ;" cellspacing="0" cellpadding="0">
                            <thead>
                                <tr>
                                    <td colspan="4">
                                        BV Amount In Words : @ViewBag.BVTotAmtInWord  only.
                                    </td>
                                    <td colspan="4">
                                        Amount In Words : @Model.AmountInWords only.
                                    </td>

                                </tr>
                                <tr style="  background: #f1f1f1;border-right: 1px solid #000;border-bottom: 1px solid #000;">
                                    <th style="text-align:left">
                                        Pay Mode
                                    </th>
                                    <th style="text-align:left">Transactio No</th>
                                    <th style="text-align:left">Bank Name</th>
                                    <th style="text-align:left">Payment Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@ViewBag.PaymentMode</td>
                                    <td>@ViewBag.TransactionNo</td>
                                    <td>@ViewBag.BankName</td>
                                    <td>@ViewBag.PaymentDate</td>
                                </tr>
                            </tbody>





                        </table>

                    </div>
                    <div class="span4" style="">
                        <table class="table inventory" style="border-bottom: 1px solid ;" cellspacing="0" cellpadding="0">

                            <tbody>
                                <tr>
                                    <td style="border:1px solid black">Total Rate </td>
                                    <td style="border:1px solid black;text-align:right">@TotalRate</td>

                                </tr>
                                @if (Model.FreeAmount != "0.00")
                                {
                                    <tr>
                                        <td style="border:1px solid black">Free </td>
                                        <td style="border:1px solid black;text-align:right">@Model.FreeAmount</td>

                                    </tr>
                                }

                                <tr>
                                    <td style="border:1px solid black">Total SGST </td>
                                    <td style="border:1px solid black;text-align:right">@TotalSGST</td>

                                </tr>
                                <tr>
                                    <td style="border:1px solid black">Total CGST </td>
                                    <td style="border:1px solid black;text-align:right">@TotalCGST </td>

                                </tr>
                                <tr>
                                    <td style="border:1px solid black">Total IGST </td>
                                    <td style="border:1px solid black;text-align:right">@TotalIGST </td>

                                </tr>
                                <tr>
                                    <td style="border:1px solid black">Total Taxable </td>
                                    <td style="border:1px solid black;text-align:right">@TotalTaxable </td>

                                </tr>
                                <tr>
                                    <td style="border:1px solid black">Final Amt </td>
                                    <td style="border:1px solid black;text-align:right">@TotalSubTotal</td>

                                </tr>
                            </tbody>





                        </table>

                    </div>
                </div>
                <br />
                <div class="row-fluid" style="border-bottom: 1px solid;">
                    <div class="span12">
                        <table class="table" cellspacing="0" cellpadding="0">

                            <tbody>

                                <tr style="">
                                    <th style="width: 60% !important; border-right: 1px solid; border-top: 1px solid;">TERM &amp; CONDITION OF SALE</th>
                                    <th style="border-top: 1px solid; font-weight: 800;">@Model.CompanyName</th>
                                </tr>
                                <tr>
                                    <td style="width: 60% !important; border-right: 1px solid; border-top: 1px solid;">
                                        <p>
                                            1) Goods once sold will not be taken back.<br>
                                            2) Disputes if any are subject to Maharastra Jurisdiction only.<br>
                                            3) Interest   3% per month, compounded monthly shall be charged from Invoice date, If  payment is not received in full within 30 days from the invoice date.<br>
                                            4) All claims regarding this invoice must be presented within 3 days from the date of the delivery of goods.<br>
                                        </p>
                                    </td>
                                    <td style="border-top: 1px solid;">
                                        <div>
                                            <br>
                                            <br>
                                            <br>
                                            <br>
                                        </div>

                                        <table cellspacing="0" cellpadding="0">
                                            <tbody>
                                                <tr>


                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                    <th>Authorised Signatory</th>
                                                </tr>

                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" style="padding: 0px;">
                                        <table class="table" style="width: 100%; border: 1px solid #000">
                                            <tbody>
                                                <tr style="text-transform: capitalize;">

                                                    <td style="width: 50% !important; border-top: none;">
                                                        COMPANY PAN NO.: @Model.PAN
                                                    </td>
                                                    <td style="text-align:right;">
                                                        <span id="lblEmployeeID">Created By:@Model.CompanyName</span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" style="text-align: center;">
                                        Corporate Office: @Model.OfficeAddress
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            @*<br>
            <input type="button" value="Print" onclick="printDiv()" style="text-align: center;margin-left: 337px;font-size: 17px;background: aliceblue;padding: 11px;">*@

        </div>
    </div>


</body>

</html>

<script>

    function printDiv() {

        $("#divcontent").show();
        window.print();

    }
</script>

