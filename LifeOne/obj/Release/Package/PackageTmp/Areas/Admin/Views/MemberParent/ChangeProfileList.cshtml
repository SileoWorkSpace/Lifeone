@using LifeOne.Models.Manager
@model LifeOne.Models.AdminManagement.AEntity.ChangeProfile

@{
    ViewBag.Title = "ChangeProfileList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Change Profile</h4>
        </div>
    </div>
    <div id="msgdiv">
        @{
            string msg = (string)TempData["msg"];
            if (msg != null)
            {
                if (msg.Equals("Deleted Successfully"))
                {
                    <div class="alert alert-success ">
                        <strong>Success!</strong> @msg
                    </div>
                }


                else if (msg.Equals("Profile Updated Successfully"))
                {
                    <div class="alert alert-success ">
                        <strong>Success!</strong> @msg
                    </div>
                }
                else if (msg.Equals("Saved Successfully"))
                {
                    <div class="alert alert-success ">
                        <strong>Success!</strong> @msg
                    </div>
                }
                else if (msg.Equals("Profile Verified  Successfully"))
                {
                    <div class="alert alert-success ">
                        <strong>Success!</strong> @msg
                    </div>
                }

                else
                {
                    <div class="alert alert-danger ">
                        <strong>Error!</strong> @msg
                    </div>
                }
            }

        }
    </div>

    <div class="row">
        <!-- Column -->
        <div class="col-12">
            <div class="card">
                @*<div class="card-header">
                        <div class="card-title">Change Profile</div>
                    </div>*@
                <div class="card-body">
                    <div>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#Sn.</th>
                                    <th scope="col">Login ID</th>
                                    <th scope="col">New Name</th>
                                    <th scope="col">Old Name</th>
                                    <th scope="col">New Mobile No.</th>
                                    <th scope="col">Old Mobile No.</th>
                                    <th scope="col">New E-mail ID</th>
                                    <th scope="col">Old E-mail ID</th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>
                            <tBody>
                                @if (Model != null)
                                {
                                    if (Model.List != null)
                                    {
                                        int i = 1;

                                        foreach (var item in Model.List)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <span style="display:none;">
                                                    @item.Fk_MemId
                                                </span>
                                                <td>
                                                    @item.LoginId
                                                </td>
                                                <td>
                                                    @item.NewName
                                                </td>
                                                <td>
                                                    @item.OldName
                                                </td>
                                                <td>
                                                    @item.NewMobileNo
                                                </td>
                                                <td>
                                                    @item.OldMobileNo
                                                </td>
                                                <td>
                                                    @item.NewEmailId
                                                </td>
                                                <td>
                                                    @item.OldEmailId
                                                </td>

                                                <td>
                                                    <div class="form-button-action">
                                                        @if (PermissionManager.IsActionPermit("Change Profile", ViewOptions.FormUpdate))
                                                        {
                                                            <a href="/ChangeProfile?id=@item.Fk_MemId&&Pk_Id=@item.Pk_Id" data-toggle="tooltip" title="" onclick="return confirm ('Are you sure Edit');" class="text-info " data-original-title="Edit Task">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                        }
                                                        @*@if (PermissionManager.IsActionPermit("Change Profile", ViewOptions.FormDelete))
                                                            {
                                                                <a href="/Master/SponsorChangeDelete/@item.Fk_MemId" title="" onclick="return confirm ('Are you sure Delete');" class="text-danger" data-original-title="Remove">
                                                                    <i class="fa fa-trash"></i>
                                                                </a>
                                                            }*@
                                                    </div>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                }

                            </tBody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
        <!-- Column -->
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(function () {
            $('#msgdiv').fadeOut(6000);
        }, 6000);
    });
</script>







