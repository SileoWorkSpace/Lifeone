        </div>
    </div>


    <div id="no-more-tables">
        <div class="row">

            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                     
                        @*<div class="row" id="advance-search" style="display:none;">
                                <div class="col-md-12">
                                    <div class="alert alert-warning" style="color:#727272 !important">
                                        <div class="row">
                                            <div class="col-12 col-md-4">
                                                <div class="form-group">
                                                    <label>Login ID</label>
                                                    <input type="text" name="LoginID" id="LoginID" placeholder="" class="form-control">
                                                </div>
                                            </div>


                                            <div class="col-12 col-md-4">
                                                <div class="form-group">
                                                    <label style="display:block;"></label>
                                                    <input type="submit" class="btn btn-success " style="margin-top:1.5em;" value="Search" id="BtnSearch">
                                                    <a href="/PlotBooking/BookingDetails" class="btn btn-danger" style="margin-top:1.5em;">Reset</a>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>*@
                        <div class="table-responsive" >
                            <table class="table table-striped mb-0">
                                <thead>

                                    <tr>
                                        <th>S.No.</th>
                                        <th>Product Name</th>
                                        <th>Sell Date</th>
                                        <th>Sell To</th>
                                        <th>Credit Qty.</th>
                                        <th>Debit Qty.</th>
                                        <th>Available Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.LstOrder.Count > 0)
                                    {
                                        foreach (var item in Model.LstOrder)
                                        {
                                    <tr>
                                        <td>@(count = count + 1)</td>
                                        <td>@item.ProductName</td>
                                        <th>@item.TranDate</th>
                                        <th>@item.SellTo</th>
                                        <td>@item.CreditQuantity</td>
                                        <td>@item.DebitQuantity</td>
                                        <td>@item.AvailableStock</td>

                                    </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <footer class="panel-footer">
                            <div class="row">


                                @if (Model != null)
                                {
                                    if (Model.Pager != null)
                                    {
                                        if (Model.Pager.EndPage > 1)
                                        {
                                            <div class="col-sm-6 text-left"> <small class="text-muted inline">showing  @Model.LstOrder.Count  of @Model.LstOrder[0].TotalRecord items</small> </div>
                                            <div class="col-sm-6 text-right text-center-xs">
                                                <ul class="pagination pagination-sm m-t-none m-b-none">
                                                    @if (Model.Pager.CurrentPage > 1)
                                                    {
                                                        <li>
                                                            <a href="/Admin/StockManagement/BindStockHistory?PrdId=@Model.LstOrder[0].PK_RId">First</a>
                                                        </li>
                                                        <li>
                                                            <a href="/Admin/StockManagement/BindStockHistory?PrdId=@Model.LstOrder[0].PK_RId&page=@(Model.Pager.CurrentPage - 1)">Previous</a>
                                                        </li>
                                                    }
                                                    @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                                    {
                                                        <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                                                            <a href="/Admin/StockManagement/BindStockHistory?PrdId=@Model.LstOrder[0].PK_RId&page=@page">@page</a>
                                                        </li>
                                                    }
                                                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                                    {
                                                        <li>
                                                            <a href="/Admin/StockManagement/BindStockHistory?PrdId=@Model.LstOrder[0].PK_RId&page=@(Model.Pager.CurrentPage + 1)">Next</a>
                                                        </li>
                                                        <li>
                                                            <a href="/Admin/StockManagement/BindStockHistory?PrdId=@Model.LstOrder[0].PK_RId&page=@(Model.Pager.TotalPages)">Last</a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    }

                                }

                            </div>
                        </footer>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
    </div>



</div>