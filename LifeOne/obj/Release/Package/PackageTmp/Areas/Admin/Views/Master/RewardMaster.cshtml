@model IEnumerable<LifeOne.Models.AdminManagement.AEntity.ModelRewardMaster>
@using LifeOne.Models.Manager;
@{

    ViewBag.Title = "RewardMaster";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Reward Master</h4>
            @*<nav aria-label="breadcrumb" class="float-left">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin-Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="#-">Masters</a></li>
                    <li class="breadcrumb-item"><a href="#-">Reward</a></li>
                </ol>
            </nav>*@
        </div>
      
            <div class="pbutton right text-right">
                @if (PermissionManager.IsActionPermit("Reward Master", ViewOptions.FormSave))
                {
                    <a href="/Admin-AddNewReward" class="btn btn-success btn-sm"> <i class="fa fa-plus" aria-hidden="true"></i> Add New</a>
                }
         
        </div>
    </div>

        <div id="no-more-tables">
            <div class="row">

                <div class="col-lg-12">
                    <div class="box">
                        <div class="box-body">


                            <div class="table-responsive">
                                <table class="table table-striped mb-0">
                                    <thead>
                                        <tr>
                                            <th>#Sn.</th>
                                            <th>Reward Name</th>
                                            <th>Reward Image</th>
                                            <th>From Date</th>
                                            <th>To Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@(i = i + 1)</td>
                                                    <td>@item.RewardName</td>
                                                    <td><img src="@item.Image" height="50px" width="50px" /></td>
                                                    <td>@item.FromDate</td>
                                                    <td>@item.ToDate</td>
                                                    <td>
                                                        @if (@item.Status == "Active")
                                                        {
                                                            <span class="badge badge-success">@item.Status</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-warning">@item.Status</span>

                                                        }

                                                    </td>
                                                    <td>
                                                        @if (PermissionManager.IsActionPermit("Reward Master", ViewOptions.FormUpdate))
                                                        {
                                                            <a href="/Admin/Master/UpdateRewardMaster?Id=@item.Pk_RewardId" class="btn btn-success btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>

                                                        }

                                                        @if (PermissionManager.IsActionPermit("Reward Master", ViewOptions.FormDelete))
                                                        {
                                                            <a href="/Admin/Master/DeleteRewardMaster?Id=@item.Pk_RewardId" class="btn btn-danger btn-sm" onclick="return confirm('are you sure to delete this record')"><i class="fa fa-trash"></i></a>


                                                        }


                                                    </td>
                                                </tr>

                                            }


                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                </div>
                <!-- /.col -->
            </div>
        </div>


    </div>