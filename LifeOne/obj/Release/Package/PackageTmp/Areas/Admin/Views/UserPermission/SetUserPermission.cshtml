            background: #fff;
        }

            .tree li:first-child {
                border-radius: 3px 3px 0 0;
            }

            .tree li:last-child {
                border-radius: 0 0 3px 3px;
            }

        .tree .active,
        .active li {
            background: #efefef;
        }

        .tree label {
            cursor: pointer;
        }

        .tree input[type=checkbox] {
            margin: -2px 6px 0 0px;
        }

    .has > label {
