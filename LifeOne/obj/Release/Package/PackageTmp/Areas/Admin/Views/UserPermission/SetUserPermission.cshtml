<div class="container-fluid" ng-app="My-App" ng-controller="My-Ctrl">
    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Set User Permission</h4>
            <nav aria-label="breadcrumb" class="float-left mt-1">
