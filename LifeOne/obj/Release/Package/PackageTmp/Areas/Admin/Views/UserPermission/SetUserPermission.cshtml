    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>



    .controls {
        /*position: fixed;*/
        width: 100%;
        top: 0;
        left: 0;
        right: 0;
        background: #fff;
        z-index: 1;
        padding: 6px 10px;
        margin-left: 2% auto !important;
