    <div id="no-more-tables">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <div class="row" id="advance-search" style="display:none;">
                            <div class="col-md-12">
                                <div class="alert alert-warning" style="color:#727272 !important">
                                    <form action="" method="post">
                                        <div class="row">
                                            <div class="col-12 col-md-2">
                                                <div class="form-group">
                                                    <label>Login Id</label>
                                                    <input type="text" name="LoginId" id="LoginId" placeholder="" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-2">
                                                <div class="form-group">
                                                    <label>Name</label>
                                                    <input type="text" name="Name" id="Name" placeholder="" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-2">
                                                <div class="form-group">
                                                    <label>Mobile</label>
                                                    <input type="text" name="Mobile" id="Mobile" placeholder="" class="form-control" onkeypress="return isNumberKey(event)" />
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-4">
                                                <div class="form-group">
                                                    <label style="display:block;"></label>
                                                    <input type="submit" class="btn btn-success " style="margin-top:1.5em;" value="Search" id="BtnSearch">
                                                    <a href="/Admin-TestiMonialApproval" class="btn btn-secondary" style="margin-top:1.5em;">Reset</a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>


                        <div class="table-responsive" >
                            <table class="table table-striped" id="tblMemberList">
                                <thead>
                                    <tr>
                                        <th>S. No.</th>
                                        <th>Name</th>
                                        <th>Login Id</th>
                                        <th>Mobile</th>
                                        <th>Crop Category</th>
                                        <th>Crop</th>
                                        <th>Description</th>
                                        <th>View</th>
                                        <th>Status</th>
                                        <th>Approved / Decline Remark</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.MemberTestimonialList.Count > 0)
                                    {
                                        int SNo = 0;
                                        foreach (var item in Model.MemberTestimonialList)
                                        {
                                            <tr>
                                                <td>@(SNo = SNo + 1)</td>
                                                <td>@item.Name</td>
                                                <td>@item.LoginId</td>
                                                <td>@item.Mobile</td>
                                                <td>@item.CropCategory
                                                <td>@item.Crop</td>
                                                <td style="width: 38%;">@item.Description</td>
                                                <td><a href="http://webapi.LifeOne.com/@item.FilePath" target="_blank">Image / Video</a></td>

                                                @if (item.IsApprove == false && item.IsDecline == false)
                                                {
                                                    <td>
                                                        <label class="label label-danger">Pending</label>
                                                    </td>
                                                }
                                                else if (item.IsApprove || item.IsDecline == false)
                                                {
                                                    <td>
                                                        <label class="label label-success">Approved</label>
                                                    </td>
                                                }
                                                else if (item.IsApprove == false && item.IsDecline == true)
                                                {
                                                    <td>
                                                        <label class="label label-danger">Declined</label>
                                                    </td>
                                                }
                                                @if (String.IsNullOrEmpty(item.Remark))
                                                {
                                                    <td>
                                                        -----------
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        @item.Remark
                                                    </td>
                                                }

                                                <td>
                                                    <button class="btn btn-sm btn-success" onclick="return confirm('Are you sure to approve this Testimonial?') ? openModel(1, 0, '@item.Id') : false;">Approve</button>
                                                    <button class="btn btn-sm btn-secondary" onclick="return confirm('Are you sure to decline this Testimonial?') ? openModel(0, 1, '@item.Id') : false;">Decline</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>

                    <footer class="card-footer bg-white p-2">
                        <div class="d-md-flex align-items-center justify-content-between">
                            @if (Model != null)
                            {
                                if (Model.Pager != null)
                                {
                                    if (Model.Pager.EndPage > 1)
                                    {
                                        <div> <small class="text-muted inline">showing @Model.MemberTestimonialList.Count  of @Model.MemberTestimonialList[0].TotalRecords items</small> </div>
