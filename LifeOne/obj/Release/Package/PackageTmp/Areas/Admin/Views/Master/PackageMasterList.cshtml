                                        {
                                            <a href="/PackageMaster?id=@Model.dtDetails.Rows[i]["Pk_PackageId"].ToString()" class="btn btn-primary btn-sm" onclick="return confirm('are you sure to Edit this record?')" style="display:@ViewBag.edit;">
