            if (Code == "1")
            {
                <span class="label label-success">@Remark</span>

            }


        }*@

    <div id="no-more-tables">
        <div class="row">

            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">


                        <div class="table-responsive">
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>#Sn.</th>
                                        <th>Reward Name</th>
                                        <th>Reward Detail Name</th>
                                        <th>Reward Image</th>
                                        <th>Business Amount</th>
                                        <th>Reward Target</th>
                                        <th>Day Duration</th>
                                        <th>No of Pairs</th>
                                        <th>Rank</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        int i = 0;
                                        foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@(i = i + 1)</td>
                                                <td>@item.RewardName</td>
                                                <td>@item.RewardDetailName</td>
                                                <td><img src="@item.RewardDetailImage" height="50px" width="50px" /></td>
                                                <td>
                                                    @if (@item.BusinessAmount == 0)
                                                    {
                                                        <span>-</span>
                                                    }
                                                    else
                                                    {
                                                        @item.BusinessAmount
                                                    }
                                                </td>
                                                <td>@item.RewardTarget</td>
                                                <td>@item.DayDuration</td>
                                                <td>@item.NoOfPairs</td>
                                                <td>@item.Rank</td>
                                                <td>
                                                    @if (PermissionManager.IsActionPermit("Reward Detail", ViewOptions.FormUpdate))
                                                    {
                                                        <a href="/Admin/Master/UpdateRewardDetail?Id=@item.Pk_RewardDetailId" class="btn btn-success btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                    }
                                                    @if (PermissionManager.IsActionPermit("Reward Detail", ViewOptions.FormDelete))
                                                    {
                                                        <a href="/Admin/Master/DeleteRewardDetail?Id=@item.Pk_RewardDetailId" class="btn btn-danger btn-sm" onclick="return confirm('are you sure to delete this record')"><i class="fa fa-trash"></i></a>
                                                    }



                                                    </td>
                                            </tr>

                                        }


                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
    </div>


</div>