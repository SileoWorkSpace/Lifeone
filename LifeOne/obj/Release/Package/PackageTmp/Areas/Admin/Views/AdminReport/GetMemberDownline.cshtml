@model LifeOne.Models.AdminManagement.AEntity.MMemberList
@{
    ViewBag.Title = "GetMemberDownline";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <section class="content-header">
        @using (Html.BeginForm("GetMemberDownline", "AdminReport", null, FormMethod.Post))
        {
            <div class="col-md-4">
                <h1><small>Get Downline Direct Seller</small> </h1>
                <ol class="breadcrumb" style="clear:both;background:none; padding:0px;">
                    <li><a href="#-">Home</a></li>
                    <li><a href="#-">Admin</a></li>
                    <li class="active">Get Downline Direct Seller List</li>
                </ol>
            </div>
            <div class="col-md-4">
                <div class="psearch">
                    @Html.HiddenFor(Model => Model.FK_MemId)
                    <select class="form-control" style="width:30%; float:left; border-right:0px;border-radius:2px 0 0 2px">
                        <option value="">--Select--</option>
                        <option value="LoginId">Login Id</option>
                        <option value="Mobile">Mobile</option>
                        <option value="Name">Name</option>
                    </select>
                    <div class="input-group" style="display:block; width:70%; float:left;">
                        <input type="text" id="search" name="search" class="form-control rsearch">
                        <button class="btn btn-success" style="display:block !important;"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="pbutton">
                    <div class="right text-right">
                        <span>
                            <!--<button type="button" class="btn btn-success btn-rounded btngreen"><i class="fa fa-file-excel-o"></i></button>-->
                        </span>
                    </div>
                </div>
            </div>
        }
    </section>
    <section class="content">
        <div id="no-more-tables">
            <form id="form1" method="post">

                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-body">
                                <table id="myTable" class="table  table-hover">
                                    <thead>
                                        <tr>
                                            <th>#Sn.</th>
                                            <th>Login</th>
                                            <th>Name</th>
                                            <th>Mobile</th>
                                            <th>Joining Date</th>
                                            <th>Invite Code</th>
                                            <th>Invited By</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.MemberListDetail.Count > 0)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.MemberListDetail)
                                            {
                                                i = i + 1;
                                                <tr>
                                                    <td data-title="#SN:">@i</td>
                                                    <td data-title="LoginId:">@item.LoginId</td>
                                                    <td data-title="Name:">
                                                        <a href="/Admin/Admin/ViewProfile?FK_MemId=@item.FK_MemId">
                                                            @item.MemberName
                                                        </a>
                                                    </td>
                                                    <td data-title="Mobile:">@item.Mobile</td>
                                                    <td data-title="Number:">@item.joiningDate</td>
                                                    <td data-title="Number:">@item.InviteCode</td>
                                                    <td data-title="Number:">@item.InvitedBy</td>
                                                    <td data-title="Status:">
                                                        @if (@item.Status == "Active")
                                                        {
                                                            <div class="badge badge badge-success" style="background-color:green">Active</div>
                                                        }
                                                        else if (@item.Status == "InActive")
                                                        {
                                                            <div class="badge badge badge-danger" style="background-color:red">InActive</div>
                                                        }



                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>

                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->

                    </div>
                    <!-- /.col -->
                </div>

            </form>
        </div>
    </section>
</div>
<script>
        function ChangeIntuptType() {
            var dllval = $('#SearchDll').val();
            $('#search').attr('name', dllval);
            return false;
        }
</script>