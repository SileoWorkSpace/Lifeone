@model LifeOne.Models.Reports
@{
    ViewBag.Title = "ViewIdCard";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <style>
        .my-card {
            margin-top: 100px;
            width: 400px;
        }

        .my-card-1 {
            margin-top: 100px;
            width: 400px;
        }

        .details {
            background-color: #0a9b40;
            margin: 2px;
        }

        .company-name {
            background-color: #0a9b40;
            border-bottom-left-radius: 80%;
            border-bottom-right-radius: 80%;
        }

        .company-name-2 {
            background-color: #0a9b40;
            border-top-left-radius: 80%;
            border-top-right-radius: 80%;
        }

        .company-name-3 {
            background-color: #0a9b40;
        }
    </style>

</head>
<body>
    <section class="d-flex">
        <div class="container d-flex justify-content-center align-items-center">
            <div class="card my-card">
                <div class="">
                    <div class="company-name p-1">
                        <h6 class="text-center text-white">LifeOne</h6>
                        <p class="text-center text-white">LifeOne pvt.ltd</p>
                    </div>
                    <div class="d-flex justify-content-between p-3">
                        <div>
                            @*<img width="180" src="/Content/NewAssests/img/logo.png" alt="">*@
                            <img width="120" src="~/home-assets/images/Lifeone-logo.png" alt="">
                        </div>
                        <div>
                            <img width="120" src="@Model.ProfilePic" alt="">
                        </div>
                    </div>
                    <div class="details mt-2 mb-2 p-1">
                        <h6 class="text-center text-white">@Model.Name<br> Id No.: @Model.LoginId<br>Phone : @Model.MobileNo</h6>
                    </div>
                    <table border="0" style="font-family: Arial, Helvetica, sans-serif; width:100%; font-size: 14px;" cellpadding="0" cellspacing="0">
                        <tr>
                            <td style="width:45%;padding: 4px 58px;">
                                <b>EID NO.</b>
                            </td>
                            <td style="padding: 4px 0;">:</td>
                            <td style="padding: 4px 4px;"> @Model.LoginId</td>
                            <td style="padding: 4px 4px;"></td>

                        </tr>
                        <tr>
                            <td style="padding: 4px 58px;">
                                <b>DOB</b>
                            </td>
                            <td style="padding: 4px 0;">:</td>
                            <td style="padding: 4px 4px;"> @Model.DOB</td>
                            <td style="padding: 4px 4px;"></td>

                        </tr>
                        <tr>
                            <td style="padding: 4px 58px;">
                                <b>Email</b>
                            </td>
                            <td style="padding: 4px 0;">:</td>
                            <td style="padding: 4px 4px;"> @Model.Email</td>
                            <td style="padding: 4px 4px;"></td>

                        </tr>
                        <tr>
                            <td style="padding: 4px 58px;">
                                <b>Phone</b>
                            </td>
                            <td style="padding: 4px 0;">:</td>
                            <td style="padding: 4px 4px;"> @Model.MobileNo</td>
                            <td style="padding: 4px 4px;"></td>

                        </tr>
                        @*<tr>
                                <td style="padding: 4px 58px;">
                                    <b>BG</b>
                                </td>
                                <td style="padding: 4px 0;">:</td>
                                <td style="padding: 4px 4px;"> AB+</td>
                                <td style="padding: 4px 4px;"></td>

                            </tr>*@
                        <tr>
                            <td style="padding: 4px 58px;">
                                <b>Address</b>
                            </td>
                            <td style="padding: 4px 0;">:</td>
                            <td style="padding: 4px 4px;"> @Model.Address,@Model.City,@Model.State ,@Model.PinCode</td>
                            <td style="padding: 4px 4px;"></td>

                        </tr>
                    </table>
                    <div class="company-name-2 p-1">
                        <h6 class="text-center text-white">Website : lifeonewellness.com</h6>
                        <p class="text-center text-white">Email : info@lifeonewellness.com</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container d-flex justify-content-center align-items-center">
            <div class="card my-card-1">
                <div class="">
                    <div class="company-name-3 p-1">
                        <h3 class="text-center text-white">Terms & Condition</h3>

                    </div>
                    <ul style="font-size:9px;padding-top:12px">
                        <li>
                            This is informed an application and an agreement to appoint an individual as a self-employed and independent distributor. This form read with Business Plan shall together be constructed (upon its acceptance) and the distributor and LIFEONE WELLNESS shall be bound by the terms and conditions herein.
                        </li>
                        <li>
                            Each applicant should be at least 18 years of age at the time of application, to become LIFEONE distributor in case of residence in Maharashtra; I confirm that I am 21 years old and/or above.
                        </li>
                        <li>
                            The contract between the Distributor and LIFEONE is on a principal-to-principal basis. The singing of this Form/Application by a Distributor & its acceptance does not bind the Distributor as an employee or agent of the Company.
                        </li>
                        <li>
                            Distributors are not permitted, under any circumstances to advertise market or deal in any manner with any products and/or services, which are not approved by LIFEONE in its network.
                        </li>
                        <li>
                            The Distributors shall attend the mandatory orientation (face to face/online session) given by LIFEONE regarding provision of fair and accurate information on all aspects of the direct selling operation, remuneration system and expected remuneration for newly recruited Distributors. The date of such an orientation session will be available to the Distributor on company’s website.

                        </li>
                        <li> The Distributors shall take appropriate steps to ensure protection of all confidential information provided to him/her by costumers.</li>
                        <li> A Distributor who does not adhere to these rules can be suspended, pending inquiry or terminated from the Distributorship.</li>
                        <li>
                            The Distributor is permitted to sell products/services on e-commerce platform/marketplace, only if he/she has taken prior written consent from LIFEONE to do the same.
                        </li>
                    </ul>

                    <div class="company-name-3 p-1">
                        <h4 class="text-center text-white">Contact Address</h4>
                        <h6 class="text-center text-white">Lifeone Wellness</h6>
                        <p class="text-center text-white"></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>
<script>
    window.onload = function () {
        window.print();
    }
</script>

