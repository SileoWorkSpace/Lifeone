@model LifeOne.Models.AssociateManagement.AssociateEntity.WelcomeLetter
@{
    ViewBag.Title = "WelcomeLetter";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}

<div class="content-wrapper-before"></div>
<div class="row">
    <div class="col-lg-12 col-xlg-12 col-md-12" style="margin-top:15px;">
        <div class="card">
            <div class="tab-content">
                <div class="tab-pane active" id="home" role="tabpanel">
                    <div class="card-body" id="testTable">
                        <div class="box-header with-border">
                            <table width="100%" border="0" align="center" cellpadding="2" cellspacing="0">
                                <tr>
                                    <td width="80%" align="left" valign="top">
                                        <img src="http://lifeonewellness.com/home-assets/images/logo-white.png" alt="Company Image" width="200" />
                                    </td>
                                    <td width="20%" align="right" valign="top">
                                        <span style="font-weight:bold;">Corporate Office :</span><br />
                                       @if (Model.dtDetails != null)
                                        {
                                            @Model.dtDetails.Rows[0]["CompanyAddress1"].ToString();
                                        }                                            
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <hr />
                        <div class="box-header with-border text-center" style="padding-bottom:15px;">
                            <h3 class="box-title">Welcome Letter</h3>
                        </div>

                        <table border="0" width="100%">
                            <tbody>
                                <tr>
                                    <td>Name : @Html.DisplayFor(model => model.MemberName, new { @class = "form-control form-control-sm" })</td>

                                    <td rowspan="5" class="text-right">
                                        @if (Model.profilepic != null)
                                        {
                                            <img src="@(Model.profilepic.Replace("~/", "/") != null ? Model.profilepic.Replace("~/", "/") : "")" alt="user-image" class="rounded-circle align-self-center" onerror="this.src = '';this.src='/Content/Associate/assets/images/no-img.jpg'" style="width:120px; max-width:120px;" />
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Joining Date : @Html.DisplayFor(m => m.JoiningDate, new { @class = "form-control form-control-sm" })</td>
                                </tr>
                                <tr>
                                    <td>Mobile No. : @Html.DisplayFor(m => m.Mobile, new { @class = "form-control form-control-sm" })</td>
                                </tr>
                                <tr>
                                    <td>PAN No. : @Html.DisplayFor(m => m.CustPanNo, new { @class = "form-control form-control-sm" })</td>
                                </tr>
                                <tr>
                                    <td>Address :@Model.VillageName,@Model.Tehsil, @Model.City,@Model.State,@Model.Pincode</td>
                                </tr>

                                <tr>
                                    <br />
                                    @*<td colspan="2" style="padding:30px 0 10px;">
                                            Particulars : Plot booking
                                        </td>*@
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        The <b>LifeOne</b>. Would like to welcome you as a valuable
                                        customer to our company. We know that you will be satisfied with our projects and
                                        the services which we provide to our customers.
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="padding-bottom:10px;">
                                        We recommend you to visit our website <b>http://lifeonewellness.com</b> for login your user
                                        profile for edit your profile, view your business, register your clients etc and
                                        also to access other products &amp; Services being offered by <b>LifeOne</b>.
                                        Please intimate us by email on <b>info@lifeonewellness.com</b> for any changes
                                        in your information i.e. Bank Details, mobile number with Proof along with a scanned
                                        copy of request letter duly signed by you so that we can update your information
                                        accordingly. Your login details are :
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <strong>Distributor ID : @Html.DisplayFor(m => m.LoginId, new { @class = "form-control form-control-sm" })</strong>
                                    </td>
                                </tr>
                                @*<tr>
                                        <td colspan="2">
                                            <strong>Password : @Html.DisplayFor(m => m.NormalPassword, new { @class = "form-control form-control-sm" })</strong>
                                        </td>
                                    </tr>*@
                                <tr>
                                    <td colspan="2" style="padding:10px 0 0px">
                                        We once again thank you for choosing <b>LifeOne</b> and
                                        assure you of our best services at all times. I do hope you will afford us the opportunity
                                        to serve you in the near future.
                                    </td>
                                </tr>
                                <tr><td style="text-align:right;" colspan="2"><button type="button" class="btn btn-success btn-rounded btnprint" onclick="printDiv('testTable')" title="Print" data-toggle="tooltip"><i class="fa fa-print"></i></button></td></tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;
        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }
</script>