@model IEnumerable<LifeOne.Models.AssociateManagement.AssociateEntity.AffiliatedUtilityShopping>
@{
    ViewBag.Title = "AssociateUtility";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}


<style>
    .pull-right {
        float: right;
    }
</style>
<div class="content-wrapper-before"></div>
<div class="row page-titles">
    <div class="ptitle">
        <h3 class="text-themecolor text-white">Utility/Affiliated Shopping</h3>
        @*<ol class="breadcrumb"><li class="breadcrumb-item"><a href="/Associate-Dashboard">Dashboard</a></li>
        <li class="active breadcrumb-item" aria-current="page">My Order</li>
        <li class="active breadcrumb-item" aria-current="page">Utility/Affiliated Shopping</li>
        </ol>*@
    </div>


</div>
<div class="row">

    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body p-0">


                <div class="row">
                    <div class="col-md-12">
                        @using (Html.BeginForm("AssociateUtility", "AssociateReport", FormMethod.Post))
                        {
                          
                                <div class="row">
                                    <div class="col-12 col-md-3">
                                        <div class="form-group">
                                            <label>Shopping Type</label>
                                            <select class="form-control" id="ddlShoppingType" name="ActionType">
                                                <option value="Recharge">--SELECT--</option>
                                                <option value="Purchase">Shopping</option>
                                                <option value="Recharge">Recharge</option>
                                            </select>   
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <div class="form-group">
                                            <label>From Date</label>
                                            <input type="date" name="FromDate" id="FromDate" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <div class="form-group">
                                            <label>To Date</label>
                                            <input type="date" name="ToDate" id="ToDate" placeholder="" class="form-control ">
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-3">
                                        <div class="form-group">
                                            <label class="display">&nbsp;</label>
                                            <input type="submit" class="btn btn-success" value="Search" id="BtnSearch">

                                            <a href="/Associate/AssociateReport/AssociateUtility" class="btn btn-secondary">Reset</a>
                                        </div>
                                    </div>

                                </div>

                            
                        }
                    </div>
                </div>


                <div class="table-responsive" >
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>S. No.</th>
                                <th>LoginId</th>
                                <th>Cr Amount</th>
                                <th>Dr Amount</th>
                                <th>Transaction No</th>
                                <th>ActionType</th>
                                <th>Order No</th>
                                <th>Operator</th>
                                <th>Remark</th>
                                <th>Transaction Date</th>
                            </tr>
                        </thead>

                        <tbody>

                            @if (Model != null)
                            {
                                int Sno = 0;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(Sno = Sno + 1)</td>
                                        <td>@item.LoginId</td>
                                        <td>@item.CreditAmount</td>
                                        <td>@item.DebitAmount</td>
                                        <td>@item.TransactionNo</td>
                                        <td>@item.ActionType</td>
                                        <td>@item.OrderNo</td>
                                        <td>@item.Operator</td>
                                        <td>@item.Remarks</td>
                                        <td>@item.TransactionDate</td>
                                    </tr>


                                }
                            }

                        </tbody>

                    </table>

                </div>
            </div>
            </div>
    </div>

  
</div>
