@model LifeOne.Models.Reports

@{
    ViewBag.Title = "Associate-CartList";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}
<script src="~/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script src="~/Content/dist/js/CommonJS.js?1.0"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>

<style>
    .bg-register {
        background: url(websitelinks/images/bg/login-bg.jpeg);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        min-height: 100vh;
    }

    .user-account h1 {
        color: #2b2b2b;
        font-weight: 300;
        margin: 30px 0 20px;
    }

    .registration-block {
        background-color: rgba(256, 256, 256, 0.8);
        padding: 15px 40px;
    }

    h2.big-green {
        font-size: 35px;
        color: #77b43f;
        font-style: italic;
        /* text-transform: uppercase; */
        text-align: center;
        margin-bottom: 15px;
    }

    .wrapper-thanks h3, .wrapper-thanks h4, .wrapper-thanks h2 {
        margin-bottom: 15px;
    }

    .account-info.clearfix {
        margin-top: 20px;
        margin-bottom: 20px;
        padding: 10px 0;
    }

    .account-info .list-inline {
        margin: 0;
        padding: 0;
        text-align: center;
    }

        .account-info .list-inline li {
            display: inline-block;
        }

    span.border-box {
        border: 2px solid #77b43f;
        padding: 7px 5px;
        color: #4a9604;
        background: #f9f9f9;
    }

    .wrapper-thanks {
        width: 100%;
        padding-top: 30px;
        padding-bottom: 30px;
    }

    .animated-gif {
        width: 92px;
        height: 92px;
        border-radius: 50%;
        /* padding-right: 102px; */
        overflow: hidden;
        text-align: center;
        margin: 0 auto;
        line-height: 92px;
        border: 0px solid green;
    }
</style>
<style type="text/css">
    @@media (max-width:560px) {
        .account-info .list-inline li {
            display: inline-block;
            margin-top: 18px;
        }
    }
</style>

<div class="container-fluid">

    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Confirmation</h4>
            <nav aria-label="breadcrumb" class="float-left">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#-">Shopping</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Confirmation</li>
                </ol>
            </nav>
        </div>

    </div>




    <div id="no-more-tables">


        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="wrapper-thanks">
                            <div class="animated-gif">
                                <img src="../../images/XwHw.gif" alt="" style="width: 100px;" />
                            </div>
                           
                            <div class="clearfix text-center">
                                <h3>@ViewBag.Msg</h3>

                                <div class="account-info clearfix">
                                    <div class="clearfix text-left">
                                        <div class="col-md-12 account-info-text text-center">
                                            <ul class="list-inline">
                                                <li><span class="border-box">Order No: @Model.OrderNo</span></li>
                                                <li><span class="border-box">Payment Id: @Model.paymentId</span></li>

                                        </div>
                                        
                                    </div>


                                </div>

                                <div class="clearfix">
                                    <h2 class="big-green">Thank You!</h2>
                                    <br />
                                   
                                </div>
                                <div>
                                    <div class=" row" style="text-align:center">
                                        <div class="col-md-12 d-flex justify-content-center">
                                            <a href="/Associate/AssociateReport/AssociateOrderDetails" id="btnAdd" class="btn btn-success btn-sm" style="text-align:center">
                                                <i aria-hidden="true" style="text-align:center"></i>My Orders
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
