                                $('#bindsendandreply').append(' <li class="replies">   ' +
                                    '  <img src = ' + ProfilePicpathFinal + ' alt = "" />                                    ' +
                                    '  <div class="message-content"><p>' + result[i].Msg + '</p>      ' +
                                    '      <span class="text text - danger small text - right">' + result[i].CreateDate + '</span>  </div>                        ' +
                                    '      </li >');
                            }

