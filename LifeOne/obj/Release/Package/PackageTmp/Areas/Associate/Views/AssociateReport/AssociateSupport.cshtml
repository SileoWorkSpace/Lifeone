<script>
    function ShowAllImage(path, name) {
        $("#allImage").attr('src', path.replace("~", ""));
        $('#myModalLabel').text(name);
        $("#myModal1").modal('show');


        if (path == "") {

            $("#allImage").attr('src', "~/Content/WebsiteCss/assets/images/others/logo.png");

        }
    }

    function OpenModal() {
        $('#myModal').modal("show");
    }

    function uploadFile(documentType, fileobj) {
        var fileInput = fileobj;
        if (fileInput.files.length === 0) {
            return;
        }
        var file = fileInput.files[0];
        var formData = new FormData();
        formData.append("documentType", documentType);
        formData.append("file", file);
        $.ajax({
            url: "/api/Image/UploadKyc",
            data: formData,
            processData: false,
            type: 'POST',
            contentType: false,
            success: function (data) {
                if (data.response == "success") {

                    if (documentType == "Support") {
                        //$scope.Supportimage = response.data.filepath.replace('~', '');
                        $('#Supportimagepath').val(data.filepath);
                        alert(data.msg);
                    }
                    else {
                        alert(response.data.msg);
                    }
                }
            }
        });
    }

    function SendRequest() {
        var Id = $('#PK_SupportId').val();
        if (Id == "0") {
            alert("Please Select Support Type");
            return false;
        }
        var messg = $('#ReplyMessage').val();
        var Subject = $('#Subject').val();
        if (messg == '') {
            alert("Please enter Some Message");
            return false;
        }
        if (Subject == '') {
            alert("Please enter Some Message");
            return false;
        }


        var uploadedfilepath = $('#Supportimagepath').val();
        $.ajax({
            method: 'POST',
            url: '/AssociateReport/SupportRequest',
            data: { Message: messg, SupporPk_id: Id, Path: uploadedfilepath },
            success: function (data) {
                if (data.response == "success") {
                    alert("Request sent SuccessFully");
                    location.reload();
                }
                else {
                    alert("Error Occured While processing the data");
                }
            }

        });

    }

    function ReplyToTeacher(PK_StudentDiaryId) {
        BindStudentQuestion(PK_StudentDiaryId);
        $("#btnshowpopup").click();
    }

    function BindStudentQuestion(Pk_DiaryId) {
        debugger
        $.ajax({
            url: "/Associate/AssociateReport/BindAssociateMessageHistory",
            type: "POST",
            dataType: 'json',
            data: JSON.stringify({ Fk_SupportId: Pk_DiaryId }),
            contentType: "application/json",
            async: false,
            success: function (result) {
                debugger
                var result = result.data;

                var PK_StudentDiaryMsgId = result[0].HistoryID;
                var FK_studentdiaryId = result[0].SupportId;
                $("#PK_StudentDiaryMsgId").text(FK_studentdiaryId);

                var profilepicpath = '/Content/Associate/assets/images/no-img.jpg';
                var ProfilePicpathFinal = profilepicpath.replace("~", "");
                $('#bindcontacts').html('');
                $('#bindcontacts').append('<li class="contact active" >' +
                    '  <div class="wrap" >                                                  ' +

                    '  <img src=' + ProfilePicpathFinal + ' alt="" />       ' +
                    '  <div class="meta">                                                     ' +
                    '      <p class="name"><b>Support</b></p>                                     ' +
                    '      <p class="preview">Query Title: ' + result[0].SupportName + '</p>                 ' +
                    '  </div>                                                                 ' +
                    '          </div >                                                        ' +
                    '      </li >');



                $("#FK_studentdiaryId").text(FK_studentdiaryId);

                if (result != undefined && result != '' && PK_StudentDiaryMsgId != 0) {
                    var str;
                    $('#bindsendandreply').html('');
                    for (var i = 0; i < result.length; i++) {

                        if (FK_studentdiaryId == result[i].SupportId) {



                            var stduepath = '/Content/Associate/assets/images/no-img.jpg';
                            var studentimgpath = stduepath.replace("~", "");

                            var ProfilePicpath = '/Content/Associate/assets/images/no-img.jpg';
