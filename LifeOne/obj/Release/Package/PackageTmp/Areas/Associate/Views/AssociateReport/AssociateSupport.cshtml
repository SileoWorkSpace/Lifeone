            type: "POST",
            dataType: 'json',
            data: JSON.stringify({ SupportId: PK_StudentDiaryMsgId, Msg: Msg }),
            contentType: "application/json",
            async: false,
            success: function (result) {
                var result = result.data;


                $("#teacherstudeMsg").val('');
                BindStudentQuestion(PK_StudentDiaryMsgId);
            },
            error: function (err) {
                alert(err.statusText);
                return false;
            }
        });
    }
</script>