@model LifeOne.Models.AdminManagement.AEntity.MMemberList
@{
    ViewBag.Title = "DirectMembers";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}

<div class="content">
    <div class="content-wrapper-before"></div>
    <!-- Start Content-->
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="ptitle">
                <h4 class="mb-1 mt-0 text-white">My Direct</h4>
                <nav aria-label="breadcrumb" class="float-left mt-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#">Direct</a></li>
                        <li class="breadcrumb-item active" aria-current="page">My Direct</li>
                    </ol>
                </nav>
            </div>

            <div class="pbutton">
                <div class="right text-right">
                    <span>
                        <button type="button" class="btn btn-success btn-rounded btngreen"><i class="fa fa-file-excel-o"></i></button>
                    </span> <span>
                        <button type="button" class="btn btn-success btn-rounded btnprint"><i class="fa fa-print"></i></button>
                    </span> <span>
                        <button type="button" class="btn btn-success btn-rounded btnPdf"><i class="fa fa-file-pdf-o"></i></button>
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9">
                                <h4 class="header-title mt-0 mb-1">My Direct</h4>
                                <p class="sub-header">
                                    View all your Direct teams
                                </p>
                            </div><div class="col-md-3 navbar-custom pull-right" style="position:relative">
                                <div class="app-search">
                                    <form>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Search...">
                                            <span data-feather="search"></span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive" >
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>#Sn.</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>Mobile</th>
                                        <th>Joining Date</th>
                                        <th>Invite Code</th>
                                        <th>Invited By</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.MemberListDetail.Count > 0)
                                    {
                                        int i = 0;
                                        foreach (var item in Model.MemberListDetail)
                                        {
                                            i = i + 1;
                                            <tr data-toggle="tooltip" data-placement="top" class="from">
                                                <td data-title="#SN:">@i</td>
                                                <td>@item.LoginId</td>
                                                <td>@item.MemberName</td>
                                                <td>@item.Mobile</td>
                                                <td>@item.joiningDate</td>
                                                <td>@item.InviteCode</td>
                                                <td>@item.InvitedBy</td>
                                                <td>

                                                    @if (@item.Status == "Active")
                                                    {
                                                        <div class="badge badge badge-success" style="background-color:green">Active</div>
                                                    }
                                                    else if (@item.Status == "InActive")
                                                    {
                                                        <div class="badge badge badge-danger" style="background-color:red">InActive</div>
                                                    }
                                                </td>

                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- container-fluid -->

</div>
