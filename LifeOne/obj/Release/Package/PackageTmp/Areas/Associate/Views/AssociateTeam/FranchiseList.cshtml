@model LifeOne.Models.AssociateManagement.AssociateEntity.FranchiseList
@{
    ViewBag.Title = "FranchiseList";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}

<div class="content">
    <div class="content-wrapper-before"></div>
    <!-- Start Content-->
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="ptitle">
                <h4 class="mb-1 mt-0 text-white">Franchise List</h4>
                <nav aria-label="breadcrumb" class="float-left mt-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Associate</a></li>
                        <li class="breadcrumb-item"><a href="#">My Team</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Franchise List</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="table-responsive" >
                        <table class="table table-striped mb-0" id="MyDownlineList">
                            <thead>
                                <tr>

                                    <th>S. No.</th>
                                    <th>Franchise Name</th>
                                    <th>Associate Name</th>
                                    <th>Mobile No</th>
                                    <th>Email Id</th>
                                    <th>Pin Code</th>
                                    <th>Area Name</th>
                                    <th>Village</th>
                                    <th>Taluka</th>
                                    <th>District</th>
                                    <th>address</th>
                                    <th>Status</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.FranchiseListlst.Count > 0)
                                {
                                    int SNo = 0;
                                    foreach (var item in Model.FranchiseListlst)
                                    {
                                        <tr>

                                            <td data-title="#SN:">@(SNo = SNo + 1)</td>
                                            <td>@item.FranchiseName</td>
                                            <td>@item.AssociateName</td>
                                            <td>@item.MobileNo</td>
                                            <td>@item.EmailId</td>
                                            <td>@item.AppliedForPinCode</td>
                                            <td>@item.AreaName</td>
                                            <td>@item.Village</td>
                                            <td>@item.Taluka</td>
                                            <td>@item.District</td>
                                            <td>@item.address</td>
                                            <td>@item.Status</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    @*<tr>
                                            <td colspan="10">No Record Found..</td>
                                        </tr>*@
                                }
                            </tbody>
                        </table>

                    </div>
                </div>

                <footer class="card-footer bg-white p-2">
                    <div class="d-md-flex align-items-center justify-content-between">

                        @if (Model != null)
                        {
                            if (Model.Pager != null)
                            {
                                if (Model.Pager.EndPage > 1)
                                {
                                    <div> <small class="text-muted inline">showing @Model.FranchiseListlst.Count  of @Model.FranchiseListlst[0].TotalRecords items</small> </div>
                                    <div>
                                        <ul class="pagination pagination-sm m-t-none m-b-none">
                                            @if (Model.Pager.CurrentPage > 1)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="/Associate/AssociateTeam/getFranchiseDetail">First</a>
                                                </li>
                                                <li class="page-item">
                                                    <a class="page-link" href="/Associate/AssociateTeam/getFranchiseDetail?Page=@(Model.Pager.CurrentPage - 1)">Previous</a>
                                                </li>
                                            }
                                            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                            {
                                                <li class="page-item @(page == Model.Pager.CurrentPage ? "active" : "")">
                                                    <a class="page-link" href="/Associate/AssociateTeam/getFranchiseDetail?Page=@page">@page</a>
                                                </li>
                                            }
                                            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="/Associate/AssociateTeam/getFranchiseDetail?Page=@(Model.Pager.CurrentPage + 1)">Next</a>
                                                </li>
                                                <li class="page-item">
                                                    <a class="page-link" href="/Associate/AssociateTeam/getFranchiseDetail?Page=@(Model.Pager.TotalPages)">Last</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }
                            }

                        }

                    </div>
                </footer>
            </div>
        </div>
    </div>
</div>
<!-- container-fluid -->
