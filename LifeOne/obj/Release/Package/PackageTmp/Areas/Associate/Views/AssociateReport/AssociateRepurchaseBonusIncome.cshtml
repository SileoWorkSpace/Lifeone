@model LifeOne.Models.AdminManagement.AEntity.MPayoutReport
@{
    ViewBag.Title = "Associate RepurchaseBonus Income";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}


<style>
    .alert-warning {
        background-color: #fcf8e3 !important;
        border-color: #faebcc !important;
    }

    .tableincome {
    }

        .tableincome td:first-child {
            background: #fbfbfb;
            max-width: 40%;
        }

        .tableincome td {
            font-weight: bold;
        }
</style>
<div class="content">
    <div class="content-wrapper-before"></div>
    <!-- Start Content-->
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="ptitle">
                <h4 class="mb-1 mt-0 text-white">Repurchase  Income</h4>
                @*<nav aria-label="breadcrumb" class="float-left mt-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Associate-Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#">Repurchase Income</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.IncomeType</li>
                    </ol>
                </nav>*@
            </div>
            <div class="pbutton">
                <div class="right text-right">
                    <span>  <a class="advance-search" title="Click here for search" data-toggle="tooltip" data-placement="bottom" href="#-">Search</a></span>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body p-0">

                        <div class="row" id="advance-search" style="display:none;">
                            <div class="col-md-12">
                                @using (Html.BeginForm("AssociateRepurchaseBonusIncome", "AssociateReport", FormMethod.Post))
                                {
                                    <div class="alert alert-warning" style="color:#727272 !important">
                                        <div class="row">
                                            <div class="col-12 col-md-3">
                                                <div class="form-group">
                                                    <label>Payout No</label>
                                                    <input type="text" name="PayoutNo" id="PayoutNo" placeholder="" class="form-control">
                                                    @*@Html.DropDownListFor(m => m.PayoutNo, new SelectList(ViewBag.PayoutMaster, "Value", "Text"), new { @class = "form-control", @id = "PayoutNo" })*@
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-3">
                                                <div class="form-group">
                                                    <label>From Date</label>
                                                    <input type="date" name="FromDate" id="FromDate" placeholder="" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-3">
                                                <div class="form-group">
                                                    <label>To Date</label>
                                                    <input type="date" name="ToDate" id="ToDate" placeholder="" class="form-control ">
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-3">
                                                <div class="form-group">
                                                    <label class="display">&nbsp;</label>
                                                    <input type="submit" class="btn btn-success" value="Search" id="BtnSearch">
                                                    <a href="/Associate/AssociateReport/AssociateRepurchaseBonusIncome" class="btn btn-secondary">Reset</a>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                }
                            </div>
                        </div>
                        <div class="table-responsive" >
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th nowrap>S. No.</th>
                                        <th nowrap>Payout No</th>
                                        <th class="text-left">From LoginId</th>
                                        @if (ViewBag.planName == "RBonus")
                                        {
                                            <th class="text-right">Repurchase Bonus</th>
                                        }
                                        @if (ViewBag.planName == "HMB")
                                        {
                                            <th class="text-right">Hybrid Matching Bonus</th>
                                        }
                                        @if (ViewBag.planName == "LeadershipB")
                                        {
                                            <th class="text-right">LDB Bonus</th>
                                        }

                                        @if (ViewBag.planName == "HouseFund")
                                        {
                                            <th class="text-right">House Fund</th>
                                        }
                                        @if (ViewBag.planName == "DirectorClub")
                                        {
                                            <th class="text-right">Director Club</th>
                                        }
                                        @if (ViewBag.planName == "LAR")
                                        {
                                            <th class="text-right">LAR Bonus</th>
                                        }
                                        @if (ViewBag.planName == "SGYearlyBonus")
                                        {
                                            <th class="text-right">SG Yearly Bonus</th>
                                        }
                                        <th class="text-right">Date</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.Objlist.Count > 0)
                                    {
                                        int SNo = 0;
                                        foreach (var item in Model.Objlist)
                                        {

                                            <tr>
                                                <td data-title="#SN:">@(SNo = SNo + 1)</td>
                                                <td data-title="PayoutNo:">@item.PayoutNo</td>
                                                <td data-title="PayoutNo:">@item.LoginId</td>
                                                @if (ViewBag.planName == "RBonus")
                                                {
                                                    <td class="text-right" data-title="Repurchase Bonus:">@item.Amount</td>
                                                }
                                                @if (ViewBag.planName == "HMB")
                                                {
                                                    <td class="text-right" data-title="Hybrid Matchning Bonus:">@item.Amount</td>
                                                }
                                                @if (ViewBag.planName == "LeadershipB")
                                                {
                                                    <td class="text-right" data-title="LDB Bonus:">@item.Amount</td>
                                                }

                                                @if (ViewBag.planName == "HouseFund")
                                                {
                                                    <td class="text-right" data-title="House Fund:">@item.Amount</td>
                                                }
                                                @if (ViewBag.planName == "DirectorClub")
                                                {
                                                    <td class="text-right" data-title="Director Fund:">@item.Amount</td>
                                                }
                                                @if (ViewBag.planName == "LAR")
                                                {
                                                    <td class="text-right" data-title="LAR Bonus:">@item.Amount</td>
                                                }
                                                @if (ViewBag.planName == "SGYearlyBonus")
                                                {
                                                    <td class="text-right" data-title="LAR Bonus:">@item.Amount</td>
                                                }
                                                <td data-title="Closing Date:">@item.ClosingDate</td>

                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        @*<tr>
                                                <td colspan="10">No Record Found..</td>
                                            </tr>*@
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- container-fluid -->
    <!-- container-fluid -->

</div>