@model LifeOne.Models.Products
@{
    ViewBag.Title = "LifeoneWellness India Herbal Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #divload {
        width: 100%;
        height: 1100px;
        position: absolute;
        z-index: 9999;
        background: url("https://thumbs.gfycat.com/LameDifferentBalloonfish-small.gif") no-repeat center center rgba(0,0,0,0.25);
    }
    .fixedImgSize {
        max-width: 400px;
        height: 300px;
    }  
</style>
<!-- Start main-content -->
<div class="main-content-area">
    <!-- Section: page title -->
    <section class="pt-15 pb-3">
        <div class="container">
            <h1 class="fs-42 mb-2 text-center">LifeoneWellness Products</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-site py-0 d-flex justify-content-center fs-15 mb-0">
                    <li class="breadcrumb-item">
                        <a class="text-decoration-none"
                           href="index.html">Home</a>
                    </li>
                    <li class="breadcrumb-item active pl-0 d-flex align-items-center text-primary" aria-current="page">
                        LifeoneWellness  Products
                    </li>
                </ol>
            </nav>
        </div>
    </section>
    <section class="pt-3 pb-10">
        <div class="container">
            <div class="row">
                @if (Model != null)
                {
                    if (Model.DtDetails != null)
                    {
                        if (Model.DtDetails.Rows.Count > 0)
                        {
                            for (int i = 0; i <= Model.DtDetails.Rows.Count - 1; i++)
                            {
                                <div class="col-6 col-lg-3 product mb-8" data-animate="fadeInUp">
                                    <div class="card border-0" >
                                        <div class="position-relative hover-zoom-in" style=" height: 400px; width: 300px;">
                                            <a href="/Home/ProductDetails?id=@AesEncryption.Crypto.Encryption("LifeWellAP1234@Z", @Model.DtDetails.Rows[i]["Pk_ProductId"].ToString())" class="d-block overflow-hidden">
                                                <img src="@Model.DtDetails.Rows[i]["PrimaryImage"].ToString()" alt="Product 01"
                                                     class="card-img-top image-active fixedImgSize">
                                                <img src="@Model.DtDetails.Rows[i]["PrimaryImage"].ToString()" alt="Product 01"
                                                     class="card-img-top image-hover fixedImgSize">
                                            </a>
                                            @*<div class="position-absolute pos-fixed-top-right d-inline-flex p-4 flex-column z-index-10">
                                                    <div class="content-change-vertical d-flex flex-column ml-auto">
                                                        <a href="javascript:void(0)" data-toggle="tooltip" data-placement="left"
                                                           title="Add to wish list"
                                                           class="add-to-wishlist d-flex align-items-center justify-content-center text-primary bg-white hover-white bg-hover-primary w-45px h-45px rounded-circle mb-2">
                                                            <i class="fas fa-star"></i>
                                                        </a>
                                                        <a href="javascript:void(0)" data-toggle="tooltip" data-placement="left" title="Compare"
                                                           class="add-to-compare d-flex align-items-center justify-content-center text-primary bg-white hover-white bg-hover-primary w-45px h-45px rounded-circle mb-2">
                                                            <i class="fal fa-exchange"></i>
                                                        </a>

                                                    </div>
                                                </div>*@

                                        </div>
                                        <div class="card-body pt-4 px-0 pb-0">
                                            <a href="shop-page-01.html"
                                               class="text-muted fs-12 font-weight-500 text-uppercase mb-1 card-title lh-14 hover-primary">
                                               
                                            </a>
                                            <h3 class="card-title fs-16 font-weight-500 mb-1 lh-14375">
                                                <a href="#">@Model.DtDetails.Rows[i]["ProductName"].ToString()</a>
                                            </h3>
                                            <p class="text-primary mb-0 card-title lh-14375">@Model.DtDetails.Rows[i]["OfferedPrice"].ToString()</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                }



            </div>
            <div class="text-center pt-2">
                <a href="javascript:void(0)" class="btn btn-outline-primary">
                    Load More
                </a>
            </div>
        </div>
    </section>
</div>
<!-- end main-content -->
<script type="text/javascript">
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' })
       
    });
</script>
