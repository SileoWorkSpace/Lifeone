@model LifeOne.Models.HomeManagement.HEntity.MLogin
@{
    ViewBag.Title = "Login";
}

<section class="page-title layer-overlay overlay-dark-9 section-typo-light bg-img-center" data-tm-bg-img="../home-assets/images/bg/bg1.jpg">
    <div class="container pt-150 pb-50">
        <div class="section-content">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="title">Login</h2>
                    <nav class="breadcrumbs" role="navigation" aria-label="Breadcrumbs">
                        <div class="breadcrumbs">
                            <span><a href="#" rel="home">Home</a></span>
                            <span><i class="fa fa-angle-right"></i></span>
                            <span><a href="#">Login</a></span>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="loginbg">
    <div class="container">
        <div class="loginIdWrap">
            <h2>SG Care Account</h2>
            <h3>Manage your SG Care Account</h3>    

            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <div class="form-group position-relative">
                    @*<input class="idinput1" placeholder="LifeOne ID" type="text" value="" />*@
                    @Html.TextBoxFor(Model => Model.Login, new { @class = "idinput1", @placeholder = "LifeOne ID" })
                    <span class="small">@Html.ValidationMessageFor(Model => Model.Login, "", new { @class = "text-danger" })</span>
                    @*<input class="inputpass" placeholder="Password" type="password" value="" />*@
                    @Html.TextBoxFor(Model => Model.Password, new { @type = "password", @class = "inputpass", @placeholder = "Password" })
                    <span class="small">@Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })</span>
                    <button type="submit" class="loginbtn-icon1"> <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></button>
                    <span class="small"><span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span></span>
                </div>
            }

            <p class="forogt">
                <a href="/Home/CustomerRegistration"> Don't have an account? Register here</a><br />
                <a href="/Home/ForgotPassword?_=@Request.QueryString["_"]"> Forgot LifeoneWellness ID or Password?</a>
            </p>

        </div>
    </div>
    
</section>
<!-- affiliate-shopping-section end -->
<!-- affiliate-shopping-section end -->


<script>
        $(document).ready(function () {

                if ('@ViewBag.UserType' != null && '@ViewBag.UserType' != '') {
                    if ('@ViewBag.UserType' == "5") {

                        $('#SMSList').show();
                    }
                }
                if ('@TempData["Msg"]' != null && '@TempData["Msg"]' != '') {
                    swal('', '@TempData["Msg"]', 'warning');
                }
    });
</script>



