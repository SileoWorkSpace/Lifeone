@model LifeOne.Models.HomeManagement.HEntity.MLogin
@{
    ViewBag.Title = "Login";
}

<section class="pb-11 pb-lg-15 pt-15">
    <div class="container">
        <h2 class="fs-sm-40 mb-10 text-center">Login with your account</h2>
        <div class="row no-gutters">
            <div class="col-lg-10 mx-auto">
                <div class="row no-gutters">
                    <div class="col-lg-6 mb-8 mb-lg-0 pr-xl-2">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            <div class="form-group mb-4">
                                @*<input class="idinput1" placeholder="LifeOne ID" type="text" value="" />*@
                                @Html.TextBoxFor(Model => Model.Login, new { @class = "idinput1 form-control", @placeholder = "Mobile no/Login Id" })
                                <span class="small">@Html.ValidationMessageFor(Model => Model.Login, "", new { @class = "text-danger" })</span>
                            </div>
                            <div class="form-group mb-3">
                                @*<input class="inputpass" placeholder="Password" type="password" value="" />*@
                                @Html.TextBoxFor(Model => Model.Password, new { @type = "password", @class = "inputpass form-control", @placeholder = "Password" })
                                <span class="small">@Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })</span>
                            </div>
                            <a href="/Home/ForgotPassword?_=@Request.QueryString["_"]" class="d-inline-block fs-15 border-bottom border-2x lh-12 mb-5 border-primary">Forgot your password?</a>
                            <button type="submit" class="btn btn-primary btn-block mb-3">Log in</button>
                            <div class="custom-control custom-checkbox mb-7">
                                <input type="checkbox" class="custom-control-input" id="customCheck1" name="remember">
                                <label class="custom-control-label fs-15" for="customCheck1">Keep me signed in.</label>
                            </div>

                            @*<button type="submit" class="loginbtn-icon1"> <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></button>*@
                            @*<span class="small"><span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span></span>*@
                        }
                    </div>
                    <div class="col-lg-6 pl-lg-6 pl-xl-12">
                        <h3 class="fs-24 mb-3">New Customer</h3>
                        <p class="mb-6">
                            By creating an account with our store, you will be able to move through the
                            checkout process
                            faster, store multiple shipping addresses, view and track your orders in your account and
                            more.
                        </p>
                        <a href="/Home/CustomerRegistration" class="btn btn-primary">Register</a>
                    </div>

                    @*<p class="forogt">
            <a href="/Home/CustomerRegistration"> Don't have an account? Register here</a><br />
            <a href="/Home/ForgotPassword?_=@Request.QueryString["_"]"> Forgot LifeoneWellness ID or Password?</a>
        </p>*@

                </div>
            </div>

</section>
