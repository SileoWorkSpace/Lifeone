@model LifeOne.Models.HomeManagement.HEntity.MLogin
@{
    ViewBag.Title = "Set Password";
}
<script>
        var status =@ViewBag.Status;
        if (status != null) {
            if (status == "1") {
                setTimeout(() => {
                    location.href = "@ViewBag.Route"
                }, 3000);
            }
    }


</script>


