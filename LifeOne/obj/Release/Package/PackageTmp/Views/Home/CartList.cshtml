@model LifeOne.Models.ProductsDetail

@{
    ViewBag.Title = "CartList";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script src="~/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script src="~/Content/dist/js/CommonJS.js?1.0"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>

<div class="container-fluid">

    <section class="mt-10">
        <div class="container container-xxl">
            <nav aria-label="breadcrumb" class="d-flex align-items-center justify-content-between">
                <ol class="breadcrumb py-3 mr-6 breadcrumb-custom">
                    <li class="breadcrumb-item"><a href="/Home/Index">Cart</a></li>
                   
                </ol>
            </nav>
        </div>
    </section>


    <div id="no-more-tables">
        <form id="form1" method="post">

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">


                            <div class="table-responsive" id="customers">
                                <table class="table mb-0" id="tblCustomers">
                                    <thead>
                                        <tr>

                                              <th>Product Name</th>
                                            <th style="text-align:right">Quantity</th>
                                            <th style="text-align:right ">Total Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.dtCartList.Rows.Count > 0)
                                        {

                                            for (var i = 0; i < Model.dtCartList.Rows.Count; i++)
                                            {

                                                <tr>
                                                    <td style="width:312px;">@Model.dtCartList.Rows[i]["ProductName"].ToString()</td>
                                                    <td style="text-align:right">@Model.dtCartList.Rows[i]["Quantity"].ToString()</td>
                                                    <td style="text-align:right ">@Model.dtCartList.Rows[i]["Price"].ToString()</td>
                                                   
                     

                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>

                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->

                </div>
                <!-- /.col -->
            </div>

        </form>
    </div>

</div>

<div id="tblpdff" style="font-size:50px;">

</div>
<script>
    function fCallPaging(val) {
        if (val == undefined || val == NaN || val == null || val == "" || val == 0) {
            val = 1;
        }
        $("#Page").val(val);
        $('#BtnSearch').trigger('click');

    }

</script>
