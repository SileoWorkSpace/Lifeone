@model LifeOne.Models.HomeManagement.HEntity.Contact
@{
    ViewBag.Title = "Contact";
}   <!-- Section: page title -->
<section class="pb-9 pt-15">
    <div class="container">
        <h1 class="fs-42 mb-2 text-center"> Contact Us</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-site py-0 d-flex justify-content-center fs-15 mb-0">
                <li class="breadcrumb-item">
                    <a class="text-decoration-none"
                       href="index.html">Home</a>
                </li>
                <li class="breadcrumb-item active pl-0 d-flex align-items-center text-primary" aria-current="page">
                    Contact Us
                </li>
            </ol>
        </nav>
    </div>
</section>
<!-- Divider: Contact -->
<div class="pb-13">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-8 mb-8 mb-md-0 pr-xl-2">
                <h2 class="fs-24 mb-2 font-weight-500">
                    Interested in discussing?
                </h2>
                <p class="mb-7">Active & Ready to use Contact Form!</p>
                <!-- Contact Form -->
                <form id="contact_form" name="contact_form" class="" action="" method="post">
                    <div class="row mb-6">
                        <div class="col-sm-6">
                            @*<label>Name <small>*</small></label>
                                <input name="form_name" class="form-control" type="text" placeholder="Enter Name">*@
                            <input name="form_name" type="text" class="form-control" placeholder="Your Name*" required>
                        </div>
                        <div class="col-sm-6">
                            @*<label>Email <small>*</small></label>
                                <input name="form_email" class="form-control required email" type="email" placeholder="Enter Email">*@
                            <input name="form_email" type="email" class="form-control" placeholder="Your Email*" required>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <div class="col-sm-6">
                            @*<label>Phone</label>*@
                            @*<input name="form_phone" class="form-control" type="text" placeholder="Enter Phone">*@
                            <input name="form_phone" type="text" class="form-control" placeholder="Phone*" required>
                        </div>
                        <div class="col-sm-6">
                            @*<label>Subject <small>*</small></label>
                                <input name="form_subject" class="form-control required" type="text" placeholder="Enter Subject">*@
                            <input name="form_subject" type="text" class="form-control" placeholder="Subject*" required>
                        </div>

                    </div>

                    <div class="form-group mb-4">
                        @*<label>Message</label>
                            <textarea name="form_message" class="form-control required" rows="5" placeholder="Enter Message"></textarea>*@
                        <textarea name="form_message" class="form-control" placeholder="Message" rows="6"></textarea>
                    </div>
                    @*<div class="mb-3">*@
                    <input name="form_botcheck" class="form-control" type="hidden" value="" />
                    @*<button type="submit" class="btn btn-flat btn-theme-colored1 text-uppercase mt-10 mb-sm-30 border-left-theme-color-2-4px" data-loading-text="Please wait...">Send your message</button>
                        <button type="reset" class="btn btn-flat btn-theme-colored3 text-uppercase mt-10 mb-sm-30 border-left-theme-color-2-4px">Reset</button>*@
                    <button type="submit" class="btn btn-primary text-uppercase letter-spacing-05px" data-loading-text="Please wait...">Send Your Message</button>
                    @*</div>*@
                </form>
            </div>

            <div class="col-md-4 pl-xl-15 pl-md-6">
                <p class="font-weight-bold text-primary mb-3">Address</p>
                <address class="mb-6">
                    6/164 Vineet Khand,Station Road,Near Husariya Chauraha,Gomti Nagar,Lucknow
                </address>
                <p class="font-weight-bold text-primary mb-2">Infomation</p>
                <p class="mb-0">+91 522 3516249</p>
                <p class="mb-7">info@lifeonewellness.com</p>
            </div>
        </div>
    </div>
</div>
