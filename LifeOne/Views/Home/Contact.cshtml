@model LifeOne.Models.HomeManagement.HEntity.Contact
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";

}   <!-- Section: page title -->

<main class="main">
    <div class="page-header" style="background-image: url(/Content/NewAssests/images/page-header/contact-us.jpg) ">
        <h1 class="page-title font-weight-bold text-capitalize ls-l">Contact Us</h1>
        <nav class="breadcrumb-nav">
            <ul class="breadcrumb">
                <li><a href="/Home/Index"><i class="d-icon-home"></i> <i class="bi bi-chevron-right"></i></a></li>
                <li>Contact Us</li>
            </ul>
        </nav>
    </div>
    <div class="page-content mt-10">
        <section class="contact-section my-5">
            <div class="container">
                @{ 
                    if(Model != null)
                    { 
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 col-sm-6 ls-m mb-4">
                                        <div class="grey-section d-flex align-items-center h-100">
                                            <div class="p-3">
                                                <h4 class="mb-2 text-capitalize">Address</h4>
                                                <p>
                                                    @Model.Address1<br>
                                                    @Model.Address2
                                                </p>

                                                <h4 class="mb-2 text-capitalize">Contact</h4>
                                                <p>
                                                    <a href="tel:#"><i class="bi bi-telephone"></i>@Model.Mobile</a><br>
                                                    <a href="tel:#"><i class="bi bi-telephone"></i>@Model.Mobile2</a>
                                                </p>
                                                <p class="mb-4">
                                                    <a href="#"><i class="bi bi-envelope-at"></i>@Model.Email</a><br>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-9 col-md-8 col-sm-6 d-flex align-items-center mb-4">
                                        <div class="w-100">
                                            <form class="pl-lg-2" method="post" action="/Home/Contact">
                                                <h4 class="ls-m font-weight-bold">Let’s Connect</h4>
                                                <p>
                                                    Your email address will not be published. Required fields are
                                                    marked *
                                                </p>
                                                <span class="text-success">@TempData["Msg"]</span>
                                                <div class="row mb-2">
                                                    <div class="col-12 mb-4">
                                                        <textarea class="form-control" required
                                                                  placeholder="Comment*" id="comment"></textarea>
                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <input class="form-control" type="text" placeholder="Name *" id="name" required>
                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <input class="form-control" type="email" placeholder="Email *" id="email" required>
                                                    </div>
                                                </div>

                                                <button type="submit" class="btn btn-primary btn-rounded">
                                                    Post Comment<i class="d-icon-arrow-right"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                    }
                }
                
            </div>
        </section>
        <!-- End About Section-->
        <!-- Google Maps - Go to the bottom of the page to change settings and map location. -->
