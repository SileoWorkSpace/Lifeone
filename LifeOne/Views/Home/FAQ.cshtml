<style>
    .py-40 {
        padding: 60px 0;
    }

    .accordion {
        max-width: 100%;
        background: #0097a7;
        margin: 0 auto;
        border-radius: 3px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .heading {
        color: #FFF;
        font-size: 14px;
        border-bottom: 1px solid #e7e7e7;
        letter-spacing: 0.8px;
        padding: 15px;
        cursor: pointer;
        position: relative;
        background-color: #009845;
    }

        .heading:hover {
            background: #02aa1b;
        }

        .heading::before {
            content: '';
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            border-top: 7px solid #f5f5f5;
            border-left: 7px solid transparent;
            border-right: 7px solid transparent;
            transition: transform 0.5s;
        }

        .heading.active::before {
            transform: translateY(-50%) rotate(-180deg);
        }

    .contents {
        display: none;
        background: #FFFAFA;
        padding: 15px;
        color: #7f8fa4;
        font-size: 13px;
        line-height: 1.5;
    }

        .contents.active {
            display: block;
        }
</style>
